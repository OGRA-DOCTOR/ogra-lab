<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
        <section name="appSettings" type="System.Configuration.AppSettingsSection, System.Configuration" />
        <section name="connectionStrings" type="System.Configuration.ConnectionStringsSection, System.Configuration" />
    </configSections>
    
    <appSettings>
        <!-- Application Settings -->
        <add key="ApplicationName" value="OGRA LAB" />
        <add key="ApplicationVersion" value="1.0.0" />
        <add key="CompanyName" value="OGRA DOCTOR" />
        
        <!-- Database Settings -->
        <add key="DatabaseProvider" value="SQLite" />
        <add key="AutoBackup" value="true" />
        <add key="BackupInterval" value="24" /> <!-- Hours -->
        <add key="BackupRetentionDays" value="30" />
        
        <!-- Security Settings -->
        <add key="DefaultPassword" value="0000" />
        <add key="PasswordMinLength" value="6" />
        <add key="PasswordMaxLength" value="100" />
        <add key="SessionTimeoutMinutes" value="120" />
        <add key="MaxLoginAttempts" value="5" />
        <add key="LockoutDurationMinutes" value="30" />
        
        <!-- Report Settings -->
        <add key="DefaultReportFormat" value="PDF" />
        <add key="ReportOutputPath" value="Reports\" />
        <add key="ReportTemplate" value="Default" />
        
        <!-- Logging Settings -->
        <add key="LogLevel" value="Information" />
        <add key="LogFilePath" value="Logs\" />
        <add key="LogRetentionDays" value="30" />
        
        <!-- UI Settings -->
        <add key="DefaultLanguage" value="ar-SA" />
        <add key="Theme" value="Light" />
        <add key="FontFamily" value="Segoe UI" />
        <add key="FontSize" value="14" />
        
        <!-- Business Settings -->
        <add key="PatientNumberPrefix" value="P" />
        <add key="OrderNumberPrefix" value="T" />
        <add key="DefaultCurrency" value="SAR" />
        <add key="TaxRate" value="15" /> <!-- VAT percentage -->
        
        <!-- Printer Settings -->
        <add key="DefaultPrinter" value="" />
        <add key="ReportPaperSize" value="A4" />
        <add key="PrintOrientation" value="Portrait" />
        
        <!-- Email Settings (if needed for notifications) -->
        <add key="SmtpServer" value="" />
        <add key="SmtpPort" value="587" />
        <add key="SmtpUseSSL" value="true" />
        <add key="SmtpUsername" value="" />
        <add key="SmtpPassword" value="" />
        <add key="FromEmail" value="" />
        
        <!-- Integration Settings -->
        <add key="AllowExternalIntegration" value="false" />
        <add key="ApiEnabled" value="false" />
        <add key="ApiPort" value="8080" />
        
        <!-- Validation Settings -->
        <add key="ValidateNationalId" value="true" />
        <add key="RequirePhoneNumber" value="false" />
        <add key="RequireEmail" value="false" />
        <add key="AllowDuplicateNames" value="true" />
        
        <!-- Performance Settings -->
        <add key="EnableCaching" value="true" />
        <add key="CacheExpirationMinutes" value="30" />
        <add key="DatabasePoolSize" value="100" />
        
        <!-- Audit Settings -->
        <add key="EnableAuditLog" value="true" />
        <add key="AuditRetentionDays" value="365" />
        <add key="LogUserActions" value="true" />
        
        <!-- Backup Settings -->
        <add key="BackupLocation" value="Backups\" />
        <add key="CompressBackups" value="true" />
        <add key="EncryptBackups" value="false" />
        
        <!-- Feature Flags -->
        <add key="EnableAdvancedReports" value="true" />
        <add key="EnableUserManagement" value="true" />
        <add key="EnablePatientPortal" value="false" />
        <add key="EnableMobileApp" value="false" />
        
        <!-- Development Settings -->
        <add key="DebugMode" value="false" />
        <add key="EnableTestData" value="false" />
        <add key="ShowDeveloperOptions" value="false" />
    </appSettings>
    
    <connectionStrings>
        <add name="DefaultConnection" 
             connectionString="Data Source=Data\OgraLab.db;Version=3;" 
             providerName="Microsoft.Data.Sqlite" />
        
        <!-- Backup connection string for failover -->
        <add name="BackupConnection" 
             connectionString="Data Source=Data\OgraLab_Backup.db;Version=3;" 
             providerName="Microsoft.Data.Sqlite" />
    </connectionStrings>
    
    <runtime>
        <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
            <dependentAssembly>
                <assemblyIdentity name="System.Runtime.CompilerServices.Unsafe" publicKeyToken="b03f5f7f11d50a3a" culture="neutral" />
                <bindingRedirect oldVersion="0.0.0.0-6.0.0.0" newVersion="6.0.0.0" />
            </dependentAssembly>
        </assemblyBinding>
    </runtime>
    
    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>
</configuration>
