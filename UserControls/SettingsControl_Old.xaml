<UserControl x:Class="OGRALAB.UserControls.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FlowDirection="RightToLeft"
             FontFamily="Cairo, Segoe UI">
    
    <UserControl.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="PrimaryDark" Color="#1e3a8a"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#f59e0b"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10b981"/>
        <SolidColorBrush x:Key="LightGray" Color="#f8fafc"/>
        <SolidColorBrush x:Key="DarkText" Color="#1e293b"/>
    </UserControl.Resources>
    
    <Grid Background="{StaticResource LightGray}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Header -->
                <Border Background="{StaticResource PrimaryDark}" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="50" Height="50" Fill="{StaticResource AccentOrange}" Margin="0,0,15,0"/>
                        <StackPanel>
                            <TextBlock Text="الإعدادات" FontSize="24" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="إعدادات النظام والتفضيلات العامة" FontSize="14" Foreground="#cbd5e1"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- General Settings -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <TextBlock Text="⚙️ الإعدادات العامة" FontSize="18" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}" Margin="0,0,0,20"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Lab Name -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15">
                                <TextBlock Text="اسم المختبر" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="OGRA LAB" FontSize="14" Padding="10" BorderThickness="2" BorderBrush="#e2e8f0"/>
                            </StackPanel>
                            
                            <!-- Lab Address -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,15">
                                <TextBlock Text="عنوان المختبر" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox FontSize="14" Padding="10" BorderThickness="2" BorderBrush="#e2e8f0"/>
                            </StackPanel>
                            
                            <!-- Lab Phone -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,15">
                                <TextBlock Text="هاتف المختبر" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox FontSize="14" Padding="10" BorderThickness="2" BorderBrush="#e2e8f0"/>
                            </StackPanel>
                            
                            <!-- Lab Email -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,15">
                                <TextBlock Text="البريد الإلكتروني" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox FontSize="14" Padding="10" BorderThickness="2" BorderBrush="#e2e8f0"/>
                            </StackPanel>
                            
                            <!-- Auto Backup -->
                            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,15">
                                <CheckBox Content="تفعيل النسخ الاحتياطي التلقائي" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock Text="سيتم إنشاء نسخة احتياطية يومياً من قاعدة البيانات" 
                                         FontSize="12" Foreground="#6c757d" Margin="25,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- System Settings -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <TextBlock Text="🔧 إعدادات النظام" FontSize="18" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}" Margin="0,0,0,20"/>
                        
                        <StackPanel>
                            <!-- Session Timeout -->
                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="مهلة انتهاء الجلسة (دقيقة)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal">
                                    <Slider Width="200" Minimum="5" Maximum="120" Value="30" 
                                           TickFrequency="5" IsSnapToTickEnabled="True"/>
                                    <TextBlock Text="30 دقيقة" FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Language -->
                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="لغة النظام" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox FontSize="14" Padding="10" BorderThickness="2" BorderBrush="#e2e8f0" Width="200" HorizontalAlignment="Right">
                                    <ComboBoxItem Content="العربية" IsSelected="True"/>
                                    <ComboBoxItem Content="English"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- Theme -->
                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="سمة النظام" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox FontSize="14" Padding="10" BorderThickness="2" BorderBrush="#e2e8f0" Width="200" HorizontalAlignment="Right">
                                    <ComboBoxItem Content="الوضع الفاتح" IsSelected="True"/>
                                    <ComboBoxItem Content="الوضع الداكن"/>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Database Settings -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <TextBlock Text="🗄️ إعدادات قاعدة البيانات" FontSize="18" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}" Margin="0,0,0,20"/>
                        
                        <StackPanel>
                            <!-- Database Status -->
                            <Border Background="#d4edda" CornerRadius="6" Padding="15" Margin="0,0,0,15">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✅" FontSize="20" Margin="0,0,10,0"/>
                                    <StackPanel>
                                        <TextBlock Text="حالة قاعدة البيانات: متصلة" FontWeight="Bold" Foreground="#155724"/>
                                        <TextBlock Text="آخر نسخة احتياطية: لم يتم إنشاء نسخة بعد" FontSize="12" Foreground="#155724"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            
                            <!-- Database Actions -->
                            <StackPanel Orientation="Horizontal">
                                <Button Content="📄 إنشاء نسخة احتياطية" 
                                       Background="{StaticResource AccentGreen}"
                                       Foreground="White"
                                       BorderThickness="0"
                                       Padding="15,8"
                                       Margin="0,0,10,0"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Cursor="Hand"/>
                                
                                <Button Content="📂 استعادة نسخة احتياطية" 
                                       Background="{StaticResource AccentOrange}"
                                       Foreground="White"
                                       BorderThickness="0"
                                       Padding="15,8"
                                       Margin="0,0,10,0"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Cursor="Hand"/>
                                
                                <Button Content="🧹 تنظيف قاعدة البيانات" 
                                       Background="#dc3545"
                                       Foreground="White"
                                       BorderThickness="0"
                                       Padding="15,8"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Cursor="Hand"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Save Button -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="💾 حفظ الإعدادات" 
                           Background="{StaticResource AccentGreen}"
                           Foreground="White"
                           BorderThickness="0"
                           Padding="25,12"
                           FontSize="16"
                           FontWeight="Bold"
                           Cursor="Hand"/>
                    
                    <Button Content="🔄 إعادة تعيين" 
                           Background="{StaticResource AccentOrange}"
                           Foreground="White"
                           BorderThickness="0"
                           Padding="25,12"
                           Margin="15,0,0,0"
                           FontSize="16"
                           FontWeight="Bold"
                           Cursor="Hand"/>
                </StackPanel>
                
                <!-- Coming Soon Message -->
                <Border Background="#ffeaa7" CornerRadius="6" Padding="15" Margin="0,20,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚡" FontSize="20" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="قيد التطوير" FontWeight="Bold" Foreground="#d63031"/>
                            <TextBlock Text="سيتم تنفيذ وظائف الإعدادات الكاملة في التحديث القادم" 
                                     FontSize="12" Foreground="#d63031"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
