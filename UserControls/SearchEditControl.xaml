<UserControl x:Class="OGRALAB.UserControls.SearchEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FlowDirection="RightToLeft"
             FontFamily="Cairo, Segoe UI">
    
    <UserControl.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="PrimaryDark" Color="#1e3a8a"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#f59e0b"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10b981"/>
        <SolidColorBrush x:Key="LightGray" Color="#f8fafc"/>
        <SolidColorBrush x:Key="DarkText" Color="#1e293b"/>
    </UserControl.Resources>
    
    <Grid Background="{StaticResource LightGray}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Header -->
                <Border Background="{StaticResource PrimaryDark}" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="50" Height="50" Fill="{StaticResource AccentOrange}" Margin="0,0,15,0"/>
                        <StackPanel>
                            <TextBlock Text="البحث والتعديل" FontSize="24" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="البحث عن المرضى وتعديل بياناتهم" FontSize="14" Foreground="#cbd5e1"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Search Section -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <TextBlock Text="البحث السريع" FontSize="18" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}" Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0" 
                                   FontSize="16" 
                                   Padding="12,10" 
                                   BorderThickness="2"
                                   BorderBrush="#e2e8f0"
                                   Background="White"
                                   Text="ادخل اسم المريض، رقم الهوية، أو رقم الهاتف"/>
                            
                            <Button Grid.Column="1" 
                                   Content="🔍 بحث" 
                                   Background="{StaticResource AccentGreen}"
                                   Foreground="White"
                                   BorderThickness="0"
                                   Padding="20,10"
                                   Margin="10,0,0,0"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Cursor="Hand"/>
                        </Grid>
                        
                        <!-- Search Filters -->
                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                            <CheckBox Content="البحث بالاسم" IsChecked="True" Margin="0,0,20,0"/>
                            <CheckBox Content="البحث برقم الهوية" IsChecked="True" Margin="0,0,20,0"/>
                            <CheckBox Content="البحث برقم الهاتف" IsChecked="True"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Results Section -->
                <Border Background="White" CornerRadius="8" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <TextBlock Text="نتائج البحث" FontSize="18" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}" Margin="0,0,0,15"/>
                        
                        <!-- Placeholder for search results -->
                        <Border Background="#f0f9ff" CornerRadius="6" Padding="40" MinHeight="200">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="🔍" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="ابدأ البحث لعرض النتائج" FontSize="16" 
                                         HorizontalAlignment="Center" Foreground="#64748b"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Coming Soon Message -->
                        <Border Background="#fff3cd" CornerRadius="6" Padding="15" Margin="0,20,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚠️" FontSize="20" Margin="0,0,10,0"/>
                                <StackPanel>
                                    <TextBlock Text="قيد التطوير" FontWeight="Bold" Foreground="#856404"/>
                                    <TextBlock Text="سيتم تنفيذ وظائف البحث والتعديل الكاملة في التحديث القادم" 
                                             FontSize="12" Foreground="#856404"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
