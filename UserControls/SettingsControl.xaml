<UserControl x:Class="OGRALAB.UserControls.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OGRALAB.Helpers"
             FlowDirection="RightToLeft"
             FontFamily="Cairo, Segoe UI">
     
    <UserControl.Resources>
        <!-- Converters -->
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        
        <!-- Color Resources -->
        <SolidColorBrush x:Key="PrimaryDark" Color="#1e3a8a"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#f59e0b"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10b981"/>
        <SolidColorBrush x:Key="AccentRed" Color="#dc2626"/>
        <SolidColorBrush x:Key="LightGray" Color="#f8fafc"/>
        <SolidColorBrush x:Key="MediumGray" Color="#64748b"/>
        <SolidColorBrush x:Key="DarkText" Color="#1e293b"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentOrange}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#d97706"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#b45309"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#9ca3af"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{StaticResource AccentGreen}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#047857"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{StaticResource AccentRed}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#b91c1c"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#991b1b"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#e2e8f0"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#e2e8f0"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </UserControl.Resources>
     
    <Grid Background="{StaticResource LightGray}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryDark}" CornerRadius="8,8,0,0" Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="⚙️" FontSize="24" Margin="0,0,10,0"/>
                <StackPanel>
                    <TextBlock Text="إعدادات النظام" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="إدارة إعدادات المختبر والنظام والنسخ الاحتياطي" FontSize="14" Foreground="#cbd5e1"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content with Tabs -->
        <TabControl Grid.Row="1" Background="{StaticResource CardBackground}" BorderThickness="1,0,1,1" BorderBrush="#e2e8f0">
            <!-- Lab Settings Tab -->
            <TabItem Header="إعدادات المختبر" FontSize="14" FontWeight="SemiBold">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <!-- Lab Information -->
                        <TextBlock Text="📋 معلومات المختبر" FontSize="16" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}" Margin="0,0,0,15"/>
                        
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Lab Name Arabic -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,15">
                                <TextBlock Text="اسم المختبر (عربي) *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding LabSettings.LabName, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            
                            <!-- Lab Name English -->
                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,15">
                                <TextBlock Text="اسم المختبر (إنجليزي)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding LabSettings.LabNameEnglish, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            
                            <!-- Address Arabic -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,15">
                                <TextBlock Text="العنوان (عربي)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding LabSettings.Address, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource ModernTextBox}"
                                       AcceptsReturn="True" TextWrapping="Wrap" Height="60"/>
                            </StackPanel>
                            
                            <!-- Address English -->
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,15">
                                <TextBlock Text="العنوان (إنجليزي)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding LabSettings.AddressEnglish, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource ModernTextBox}"
                                       AcceptsReturn="True" TextWrapping="Wrap" Height="60"/>
                            </StackPanel>
                            
                            <!-- Phone -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,15">
                                <TextBlock Text="الهاتف" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding LabSettings.Phone, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            
                            <!-- Mobile -->
                            <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,15">
                                <TextBlock Text="الجوال" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding LabSettings.Mobile, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            
                            <!-- Email -->
                            <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,0,15">
                                <TextBlock Text="البريد الإلكتروني" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding LabSettings.Email, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            
                            <!-- Website -->
                            <StackPanel Grid.Row="3" Grid.Column="2" Margin="0,0,0,15">
                                <TextBlock Text="الموقع الإلكتروني" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding LabSettings.Website, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>

                        <!-- License and Director -->
                        <TextBlock Text="📜 بيانات الترخيص والإدارة" FontSize="16" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}" Margin="0,20,0,15"/>
                        
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- License Number -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,15">
                                <TextBlock Text="رقم الترخيص" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding LabSettings.LicenseNumber, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            
                            <!-- Director Title -->
                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,15">
                                <TextBlock Text="لقب المدير" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox SelectedValue="{Binding LabSettings.DirectorTitle, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource ModernComboBox}" IsEditable="True">
                                    <ComboBoxItem Content="أ.د"/>
                                    <ComboBoxItem Content="د"/>
                                    <ComboBoxItem Content="أستاذ"/>
                                    <ComboBoxItem Content="دكتور"/>
                                    <ComboBoxItem Content="الأستاذ الدكتور"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- Director Name -->
                            <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Margin="0,0,0,15">
                                <TextBlock Text="اسم المدير" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding LabSettings.DirectorName, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Report Settings -->
                        <TextBlock Text="📄 إعدادات التقارير" FontSize="16" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}" Margin="0,20,0,15"/>
                        
                        <StackPanel Margin="0,0,0,20">
                            <!-- Logo Settings -->
                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="شعار المختبر" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBox Grid.Column="0" Text="{Binding LabSettings.LogoPath, UpdateSourceTrigger=PropertyChanged}"
                                           Style="{StaticResource ModernTextBox}" IsReadOnly="True"/>
                                    <Button Grid.Column="1" Content="📁 استعراض" 
                                           Style="{StaticResource PrimaryButton}"
                                           Command="{Binding BrowseLogoCommand}"
                                           Margin="5,0,0,0"/>
                                </Grid>
                            </StackPanel>
                            
                            <!-- Report Options -->
                            <StackPanel>
                                <CheckBox Content="عرض الشعار في التقارير" 
                                        IsChecked="{Binding LabSettings.ShowLogoInReports}"
                                        FontSize="14" Margin="0,5"/>
                                <CheckBox Content="عرض رأس الصفحة في التقارير" 
                                        IsChecked="{Binding LabSettings.ShowHeaderInReports}"
                                        FontSize="14" Margin="0,5"/>
                                <CheckBox Content="عرض تذييل الصفحة في التقارير" 
                                        IsChecked="{Binding LabSettings.ShowFooterInReports}"
                                        FontSize="14" Margin="0,5"/>
                            </StackPanel>
                            
                            <!-- Footer Text -->
                            <StackPanel Margin="0,15,0,0">
                                <TextBlock Text="نص التذييل (عربي)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding LabSettings.ReportFooterText, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource ModernTextBox}"
                                       AcceptsReturn="True" TextWrapping="Wrap" Height="60"/>
                            </StackPanel>
                            
                            <StackPanel Margin="0,10,0,0">
                                <TextBlock Text="نص التذييل (إنجليزي)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding LabSettings.ReportFooterTextEnglish, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource ModernTextBox}"
                                       AcceptsReturn="True" TextWrapping="Wrap" Height="60"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <Button Content="💾 حفظ إعدادات المختبر" 
                                   Style="{StaticResource SecondaryButton}"
                                   Command="{Binding SaveLabSettingsCommand}"
                                   Padding="20,10"/>
                            
                            <Button Content="🔄 إعادة تعيين" 
                                   Style="{StaticResource DangerButton}"
                                   Command="{Binding ResetLabSettingsCommand}"
                                   Padding="15,10"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- System Settings Tab -->
            <TabItem Header="إعدادات النظام" FontSize="14" FontWeight="SemiBold">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <!-- User Interface Settings -->
                        <TextBlock Text="🎨 إعدادات واجهة المستخدم" FontSize="16" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}" Margin="0,0,0,15"/>
                        
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Language -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,15">
                                <TextBlock Text="لغة النظام" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding AvailableLanguages}"
                                        SelectedValue="{Binding SystemSettings.Language}"
                                        Style="{StaticResource ModernComboBox}"/>
                            </StackPanel>
                            
                            <!-- Theme -->
                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,15">
                                <TextBlock Text="سمة النظام" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding AvailableThemes}"
                                        SelectedValue="{Binding SystemSettings.Theme}"
                                        Style="{StaticResource ModernComboBox}"/>
                            </StackPanel>
                            
                            <!-- Font Family -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,15">
                                <TextBlock Text="خط النظام" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding AvailableFonts}"
                                        SelectedValue="{Binding SystemSettings.FontFamily}"
                                        Style="{StaticResource ModernComboBox}"/>
                            </StackPanel>
                            
                            <!-- Font Size -->
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,15">
                                <TextBlock Text="حجم الخط" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal">
                                    <Slider Width="150" Minimum="10" Maximum="24" 
                                           Value="{Binding SystemSettings.FontSize}"
                                           TickFrequency="2" IsSnapToTickEnabled="True"/>
                                    <TextBlock Text="{Binding SystemSettings.FontSize}" 
                                             FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <!-- Security Settings -->
                        <TextBlock Text="🔒 إعدادات الأمان" FontSize="16" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}" Margin="0,20,0,15"/>
                        
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Session Timeout -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,15">
                                <TextBlock Text="مهلة انتهاء الجلسة (دقيقة)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal">
                                    <Slider Width="150" Minimum="5" Maximum="480" 
                                           Value="{Binding SystemSettings.SessionTimeoutMinutes}"
                                           TickFrequency="5" IsSnapToTickEnabled="True"/>
                                    <TextBlock Text="{Binding SystemSettings.SessionTimeoutMinutes}" 
                                             FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Min Password Length -->
                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,15">
                                <TextBlock Text="الحد الأدنى لطول كلمة المرور" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal">
                                    <Slider Width="150" Minimum="4" Maximum="50" 
                                           Value="{Binding SystemSettings.MinPasswordLength}"
                                           TickFrequency="1" IsSnapToTickEnabled="True"/>
                                    <TextBlock Text="{Binding SystemSettings.MinPasswordLength}" 
                                             FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Max Login Attempts -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,15">
                                <TextBlock Text="محاولات الدخول المسموحة" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal">
                                    <Slider Width="150" Minimum="1" Maximum="10" 
                                           Value="{Binding SystemSettings.MaxLoginAttempts}"
                                           TickFrequency="1" IsSnapToTickEnabled="True"/>
                                    <TextBlock Text="{Binding SystemSettings.MaxLoginAttempts}" 
                                             FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Lockout Minutes -->
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,15">
                                <TextBlock Text="مدة القفل (دقيقة)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal">
                                    <Slider Width="150" Minimum="5" Maximum="60" 
                                           Value="{Binding SystemSettings.LoginLockoutMinutes}"
                                           TickFrequency="5" IsSnapToTickEnabled="True"/>
                                    <TextBlock Text="{Binding SystemSettings.LoginLockoutMinutes}" 
                                             FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Security Options -->
                            <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Margin="0,0,0,15">
                                <CheckBox Content="تفعيل تعقيد كلمة المرور" 
                                        IsChecked="{Binding SystemSettings.EnablePasswordComplexity}"
                                        FontSize="14" Margin="0,5"/>
                                <CheckBox Content="تفعيل سجل المراجعة" 
                                        IsChecked="{Binding SystemSettings.EnableAuditLog}"
                                        FontSize="14" Margin="0,5"/>
                                <CheckBox Content="تفعيل التحقق من صحة البيانات" 
                                        IsChecked="{Binding SystemSettings.EnableDataValidation}"
                                        FontSize="14" Margin="0,5"/>
                            </StackPanel>
                        </Grid>

                        <!-- Backup Settings -->
                        <TextBlock Text="💾 إعدادات النسخ الاحتياطي" FontSize="16" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}" Margin="0,20,0,15"/>
                        
                        <StackPanel Margin="0,0,0,20">
                            <!-- Auto Backup -->
                            <CheckBox Content="تفعيل النسخ الاحتياطي التلقائي" 
                                    IsChecked="{Binding SystemSettings.AutoBackupEnabled}"
                                    FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Backup Interval -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,15">
                                    <TextBlock Text="فترة النسخ الاحتياطي (ساعة)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Slider Width="150" Minimum="1" Maximum="168" 
                                               Value="{Binding SystemSettings.AutoBackupIntervalHours}"
                                               TickFrequency="1" IsSnapToTickEnabled="True"/>
                                        <TextBlock Text="{Binding SystemSettings.AutoBackupIntervalHours}" 
                                                 FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <!-- Max Backup Files -->
                                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,15">
                                    <TextBlock Text="الحد الأقصى للنسخ المحفوظة" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Slider Width="150" Minimum="1" Maximum="100" 
                                               Value="{Binding SystemSettings.MaxBackupFiles}"
                                               TickFrequency="5" IsSnapToTickEnabled="True"/>
                                        <TextBlock Text="{Binding SystemSettings.MaxBackupFiles}" 
                                                 FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <!-- Backup Path -->
                                <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Margin="0,0,0,15">
                                    <TextBlock Text="مجلد النسخ الاحتياطية" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBox Grid.Column="0" Text="{Binding SystemSettings.BackupPath, UpdateSourceTrigger=PropertyChanged}"
                                               Style="{StaticResource ModernTextBox}"/>
                                        <Button Grid.Column="1" Content="📁 استعراض" 
                                               Style="{StaticResource PrimaryButton}"
                                               Command="{Binding BrowseBackupPathCommand}"
                                               Margin="5,0,0,0"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Other Settings -->
                        <TextBlock Text="🛠️ إعدادات أخرى" FontSize="16" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}" Margin="0,20,0,15"/>
                        
                        <StackPanel Margin="0,0,0,20">
                            <CheckBox Content="إظهار رسائل التأكيد" 
                                    IsChecked="{Binding SystemSettings.ShowConfirmationDialogs}"
                                    FontSize="14" Margin="0,5"/>
                            <CheckBox Content="تفعيل الحفظ التلقائي" 
                                    IsChecked="{Binding SystemSettings.EnableAutoSave}"
                                    FontSize="14" Margin="0,5"/>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <Button Content="💾 حفظ إعدادات النظام" 
                                   Style="{StaticResource SecondaryButton}"
                                   Command="{Binding SaveSystemSettingsCommand}"
                                   Padding="20,10"/>
                            
                            <Button Content="🔄 إعادة تعيين" 
                                   Style="{StaticResource DangerButton}"
                                   Command="{Binding ResetSystemSettingsCommand}"
                                   Padding="15,10"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Backup Management Tab -->
            <TabItem Header="النسخ الاحتياطي" FontSize="14" FontWeight="SemiBold">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Backup Actions -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <Button Content="📄 إنشاء نسخة احتياطية" 
                               Style="{StaticResource SecondaryButton}"
                               Command="{Binding CreateBackupCommand}"
                               Padding="15,8"/>
                        
                        <Button Content="🔄 تحديث القائمة" 
                               Style="{StaticResource PrimaryButton}"
                               Command="{Binding RefreshBackupsCommand}"
                               Padding="15,8"/>
                        
                        <Button Content="✅ تحقق من النسخة" 
                               Style="{StaticResource PrimaryButton}"
                               Background="#6366f1"
                               Command="{Binding VerifyBackupCommand}"
                               Padding="15,8"/>
                        
                        <Button Content="📂 استعادة النسخة" 
                               Style="{StaticResource PrimaryButton}"
                               Background="#8b5cf6"
                               Command="{Binding RestoreBackupCommand}"
                               Padding="15,8"/>
                        
                        <Button Content="🗑️ حذف النسخة" 
                               Style="{StaticResource DangerButton}"
                               Command="{Binding DeleteBackupCommand}"
                               Padding="15,8"/>
                    </StackPanel>

                    <!-- Backups List -->
                    <Border Grid.Row="1" Background="{StaticResource CardBackground}" CornerRadius="8" Padding="15"
                           BorderBrush="#e2e8f0" BorderThickness="1">
                        <Grid>
                            <!-- Data Grid -->
                            <DataGrid ItemsSource="{Binding Backups}"
                                    SelectedItem="{Binding SelectedBackup}"
                                    AutoGenerateColumns="False"
                                    IsReadOnly="True"
                                    GridLinesVisibility="Horizontal"
                                    HeadersVisibility="Column"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    SelectionMode="Single"
                                    FontSize="12"
                                    Visibility="{Binding HasBackups, Converter={StaticResource BoolToVisibilityConverter}}">
                                
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="اسم الملف" Binding="{Binding FileName}" Width="*"/>
                                    <DataGridTextColumn Header="التاريخ" Binding="{Binding BackupDate, StringFormat=dd/MM/yyyy HH:mm}" Width="120"/>
                                    <DataGridTextColumn Header="النوع" Binding="{Binding BackupTypeDisplay}" Width="80"/>
                                    <DataGridTextColumn Header="الحجم" Binding="{Binding FileSizeFormatted}" Width="80"/>
                                    <DataGridTextColumn Header="الحالة" Binding="{Binding StatusDisplay}" Width="80"/>
                                    <DataGridTextColumn Header="المنشئ" Binding="{Binding CreatedBy}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- No Backups Message -->
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Visibility="{Binding HasBackups, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                <TextBlock Text="💾" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                <TextBlock Text="لا توجد نسخ احتياطية" FontSize="18" FontWeight="SemiBold" 
                                         HorizontalAlignment="Center" Foreground="{StaticResource DarkText}"/>
                                <TextBlock Text="انقر على 'إنشاء نسخة احتياطية' لبدء إنشاء النسخ" 
                                         FontSize="14" HorizontalAlignment="Center" 
                                         Foreground="{StaticResource MediumGray}" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Status Bar -->
                    <Border Grid.Row="2" Background="#f8f9fa" CornerRadius="6" Padding="10" Margin="0,15,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊 الإحصائيات: " FontWeight="Bold"/>
                            <TextBlock Text="{Binding BackupsCount}" FontWeight="SemiBold"/>
                            <TextBlock Text=" نسخة احتياطية" Margin="0,0,20,0"/>
                            
                            <TextBlock Text="💡 تلميح: " FontWeight="Bold" Foreground="{StaticResource AccentOrange}"/>
                            <TextBlock Text="يُنصح بإنشاء نسخة احتياطية قبل إجراء تغييرات مهمة على البيانات" 
                                     FontSize="12" Foreground="{StaticResource MediumGray}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Management Tools Tab -->
            <TabItem Header="أدوات الإدارة" FontSize="14" FontWeight="SemiBold">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <!-- Management Cards -->
                        <TextBlock Text="🔧 أدوات الإدارة" FontSize="16" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}" Margin="0,0,0,15"/>
                        
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Test Types Management -->
                            <Border Grid.Column="0" Background="{StaticResource AccentGreen}" 
                                   CornerRadius="8" Padding="15" Cursor="Hand"
                                   MouseLeftButtonUp="ManageTestTypes_Click">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="🧪" FontSize="32" HorizontalAlignment="Center" Foreground="White"/>
                                    <TextBlock Text="إدارة أنواع التحاليل" FontSize="12" FontWeight="SemiBold" 
                                             HorizontalAlignment="Center" Foreground="White" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- User Management -->
                            <Border Grid.Column="2" Background="{StaticResource AccentOrange}" 
                                   CornerRadius="8" Padding="15" Cursor="Hand"
                                   MouseLeftButtonUp="ManageUsers_Click">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="👥" FontSize="32" HorizontalAlignment="Center" Foreground="White"/>
                                    <TextBlock Text="إدارة المستخدمين" FontSize="12" FontWeight="SemiBold" 
                                             HorizontalAlignment="Center" Foreground="White" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Login Logs -->
                            <Border Grid.Column="4" Background="{StaticResource PrimaryDark}" 
                                   CornerRadius="8" Padding="15" Cursor="Hand"
                                   MouseLeftButtonUp="ViewLoginLogs_Click">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="📝" FontSize="32" HorizontalAlignment="Center" Foreground="White"/>
                                    <TextBlock Text="سجل الدخول" FontSize="12" FontWeight="SemiBold" 
                                             HorizontalAlignment="Center" Foreground="White" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- System Statistics -->
                            <Border Grid.Column="6" Background="#8b5cf6" 
                                   CornerRadius="8" Padding="15" Cursor="Hand"
                                   MouseLeftButtonUp="ViewSystemStats_Click">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="📊" FontSize="32" HorizontalAlignment="Center" Foreground="White"/>
                                    <TextBlock Text="إحصائيات النظام" FontSize="12" FontWeight="SemiBold" 
                                             HorizontalAlignment="Center" Foreground="White" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Import/Export Settings -->
                        <TextBlock Text="📁 استيراد وتصدير الإعدادات" FontSize="16" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}" Margin="0,20,0,15"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Button Content="📤 تصدير الإعدادات" 
                                   Style="{StaticResource SecondaryButton}"
                                   Command="{Binding ExportSettingsCommand}"
                                   Padding="20,10"/>
                            
                            <Button Content="📥 استيراد الإعدادات" 
                                   Style="{StaticResource PrimaryButton}"
                                   Command="{Binding ImportSettingsCommand}"
                                   Padding="20,10"/>
                        </StackPanel>

                        <!-- System Information -->
                        <TextBlock Text="ℹ️ معلومات النظام" FontSize="16" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}" Margin="0,20,0,15"/>
                        
                        <Border Background="#e3f2fd" CornerRadius="6" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="إصدار النظام: OGRA LAB v1.6.0" FontSize="14" Margin="0,2"/>
                                <TextBlock Text="تاريخ البناء: 2024-05-27" FontSize="14" Margin="0,2"/>
                                <TextBlock Text="نوع قاعدة البيانات: SQLite" FontSize="14" Margin="0,2"/>
                                <TextBlock Text="إطار العمل: .NET 8.0 WPF" FontSize="14" Margin="0,2"/>
                            </StackPanel>
                        </Border>

                        <!-- Unsaved Changes Warning -->
                        <Border Background="#fff3cd" BorderBrush="#ffeaa7" BorderThickness="2" 
                               CornerRadius="6" Padding="15" Margin="0,0,0,0"
                               Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚠️" FontSize="20" Margin="0,0,10,0"/>
                                <StackPanel>
                                    <TextBlock Text="تغييرات غير محفوظة" FontWeight="Bold" Foreground="#856404"/>
                                    <TextBlock Text="لديك تغييرات غير محفوظة في الإعدادات. تأكد من حفظها قبل الخروج." 
                                             FontSize="12" Foreground="#856404"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="2" 
             Background="#80000000" 
             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                           Width="200" 
                           Height="4" 
                           Background="Transparent" 
                           Foreground="{StaticResource AccentOrange}"/>
                <TextBlock Text="جاري المعالجة..." 
                         Foreground="White" 
                         FontSize="16" 
                         Margin="0,15,0,0"
                         HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
