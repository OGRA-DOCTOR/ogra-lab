<UserControl x:Class="OGRALAB.UserControls.PatientManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             FlowDirection="RightToLeft"
             FontFamily="Cairo, Segoe UI">
    
    <UserControl.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="PrimaryDark" Color="#1e3a8a"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#f59e0b"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10b981"/>
        <SolidColorBrush x:Key="LightGray" Color="#f8fafc"/>
        <SolidColorBrush x:Key="MediumGray" Color="#64748b"/>
        <SolidColorBrush x:Key="DarkText" Color="#1e293b"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>

        <!-- Button Styles -->
        <Style x:Key="ActionCardStyle" TargetType="Border">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Opacity" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource LightGray}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryDark}" CornerRadius="8,8,0,0" Padding="20,15" Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📋" FontSize="24" Margin="0,0,10,0"/>
                <StackPanel>
                    <TextBlock Text="إدارة المرضى" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="إضافة، تعديل، وإدارة بيانات المرضى" FontSize="14" Foreground="#cbd5e1"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Quick Actions -->
        <Border Grid.Row="1" Background="{StaticResource CardBackground}" Padding="20" Margin="0,0,0,0" BorderBrush="#e2e8f0" BorderThickness="1,0,1,0">
            <UniformGrid Rows="1" Columns="3">
                <!-- Add Patient Card -->
                <Border Background="{StaticResource AccentOrange}" CornerRadius="8" Padding="20,15" Margin="0,0,7,0" 
                        Style="{StaticResource ActionCardStyle}"
                        MouseLeftButtonUp="AddPatient_Click">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="➕" FontSize="32" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="إضافة مريض" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="White" Margin="0,5,0,0"/>
                        <TextBlock Text="تسجيل مريض جديد" FontSize="12" HorizontalAlignment="Center" Foreground="#fed7aa" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- View Patients Card -->
                <Border Background="{StaticResource AccentGreen}" CornerRadius="8" Padding="20,15" Margin="7,0" 
                        Style="{StaticResource ActionCardStyle}"
                        MouseLeftButtonUp="ViewPatients_Click">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="👥" FontSize="32" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="قائمة المرضى" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="White" Margin="0,5,0,0"/>
                        <TextBlock Text="عرض جميع المرضى" FontSize="12" HorizontalAlignment="Center" Foreground="#a7f3d0" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Quick Search Card -->
                <Border Background="{StaticResource PrimaryDark}" CornerRadius="8" Padding="20,15" Margin="7,0,0,0" 
                        Style="{StaticResource ActionCardStyle}"
                        MouseLeftButtonUp="QuickSearch_Click">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="🔍" FontSize="32" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="البحث السريع" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="White" Margin="0,5,0,0"/>
                        <TextBlock Text="البحث عن مريض" FontSize="12" HorizontalAlignment="Center" Foreground="#cbd5e1" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </Border>

        <!-- Quick Search Section -->
        <Border Grid.Row="2" Background="{StaticResource CardBackground}" Padding="20,15" Margin="0,0,0,15" BorderBrush="#e2e8f0" BorderThickness="1,0,1,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0" 
                         x:Name="SearchTextBox"
                         FontSize="14" 
                         Padding="10,8" 
                         BorderThickness="2" 
                         BorderBrush="#e2e8f0" 
                         Background="White"
                         Tag="البحث السريع عن مريض..."
                         KeyDown="SearchTextBox_KeyDown"/>
                
                <Button Grid.Column="1" 
                        Content="🔍 بحث" 
                        Background="{StaticResource AccentGreen}"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="15,8"
                        Margin="10,0,0,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="Search_Click"/>
                
                <Button Grid.Column="2" 
                        Content="🗑️ مسح" 
                        Background="#dc2626"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="15,8"
                        Margin="5,0,0,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="ClearSearch_Click"/>
            </Grid>
        </Border>

        <!-- Statistics Section -->
        <Border Grid.Row="3" Background="{StaticResource CardBackground}" CornerRadius="0,0,8,8" Padding="20" BorderBrush="#e2e8f0" BorderThickness="1">
            <StackPanel>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="إحصائيات المرضى" FontSize="18" FontWeight="Bold" Foreground="{StaticResource DarkText}"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="آخر تحديث:" FontSize="12" Foreground="{StaticResource MediumGray}" Margin="0,0,5,0"/>
                        <TextBlock x:Name="LastUpdateText" Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat=HH:mm:ss}" 
                                   FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource AccentOrange}"/>
                    </StackPanel>
                </Grid>
                
                <UniformGrid Rows="2" Columns="2">
                    <!-- Total Patients -->
                    <Border Background="#ecfdf5" BorderBrush="{StaticResource AccentGreen}" BorderThickness="2" CornerRadius="8" Padding="15" Margin="0,0,7,7">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="👥" FontSize="20" Margin="0,0,8,0"/>
                                <TextBlock Text="إجمالي المرضى" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource DarkText}"/>
                            </StackPanel>
                            <TextBlock x:Name="TotalPatientsText" Text="0" FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentGreen}"/>
                        </StackPanel>
                    </Border>

                    <!-- New This Month -->
                    <Border Background="#fef3c7" BorderBrush="{StaticResource AccentOrange}" BorderThickness="2" CornerRadius="8" Padding="15" Margin="7,0,0,7">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="📅" FontSize="20" Margin="0,0,8,0"/>
                                <TextBlock Text="جديد هذا الشهر" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource DarkText}"/>
                            </StackPanel>
                            <TextBlock x:Name="NewThisMonthText" Text="0" FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentOrange}"/>
                        </StackPanel>
                    </Border>

                    <!-- Active Tests -->
                    <Border Background="#e0f2fe" BorderBrush="{StaticResource PrimaryDark}" BorderThickness="2" CornerRadius="8" Padding="15" Margin="0,7,7,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="🧪" FontSize="20" Margin="0,0,8,0"/>
                                <TextBlock Text="التحاليل النشطة" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource DarkText}"/>
                            </StackPanel>
                            <TextBlock x:Name="ActiveTestsText" Text="0" FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryDark}"/>
                        </StackPanel>
                    </Border>

                    <!-- Pending Results -->
                    <Border Background="#fef2f2" BorderBrush="#dc2626" BorderThickness="2" CornerRadius="8" Padding="15" Margin="7,7,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="⏳" FontSize="20" Margin="0,0,8,0"/>
                                <TextBlock Text="في الانتظار" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource DarkText}"/>
                            </StackPanel>
                            <TextBlock x:Name="PendingResultsText" Text="0" FontSize="24" FontWeight="Bold" Foreground="#dc2626"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Recent Patients List -->
                <Border Background="#f8fafc" BorderBrush="#e2e8f0" BorderThickness="1" CornerRadius="6" Padding="15" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="آخر المرضى المسجلين" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource DarkText}" Margin="0,0,0,10"/>
                        <ListBox x:Name="RecentPatientsListBox" 
                                 Background="Transparent" 
                                 BorderThickness="0"
                                 Height="120"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" CornerRadius="4" Padding="10,8" Margin="0,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Ellipse Grid.Column="0" Width="8" Height="8" Fill="{StaticResource AccentGreen}" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="1" Text="{Binding FullName}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="{Binding CreatedDate, StringFormat=dd/MM}" 
                                                     FontSize="12" Foreground="{StaticResource MediumGray}" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
