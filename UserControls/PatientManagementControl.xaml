<UserControl x:Class="OGRALAB.UserControls.PatientManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FlowDirection="RightToLeft"
             FontFamily="Cairo, Segoe UI">
    
    <UserControl.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="PrimaryDark" Color="#1e3a8a"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#f59e0b"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10b981"/>
        <SolidColorBrush x:Key="LightGray" Color="#f8fafc"/>
        <SolidColorBrush x:Key="DarkText" Color="#1e293b"/>
    </UserControl.Resources>
    
    <Grid Background="{StaticResource LightGray}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Header -->
                <Border Background="{StaticResource PrimaryDark}" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="50" Height="50" Fill="{StaticResource AccentOrange}" Margin="0,0,15,0"/>
                        <StackPanel>
                            <TextBlock Text="إدارة المرضى" FontSize="24" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="إضافة وتعديل وعرض بيانات المرضى" FontSize="14" Foreground="#cbd5e1"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Quick Actions -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0" Background="{StaticResource AccentGreen}" 
                           CornerRadius="8" Padding="20" Margin="5">
                        <StackPanel HorizontalAlignment="Center" Cursor="Hand">
                            <TextBlock Text="➕" FontSize="40" HorizontalAlignment="Center" Foreground="White"/>
                            <TextBlock Text="إضافة مريض جديد" FontSize="16" FontWeight="SemiBold" 
                                     HorizontalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Grid.Column="1" Background="{StaticResource AccentOrange}" 
                           CornerRadius="8" Padding="20" Margin="5">
                        <StackPanel HorizontalAlignment="Center" Cursor="Hand">
                            <TextBlock Text="📋" FontSize="40" HorizontalAlignment="Center" Foreground="White"/>
                            <TextBlock Text="قائمة المرضى" FontSize="16" FontWeight="SemiBold" 
                                     HorizontalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Grid.Column="2" Background="{StaticResource PrimaryDark}" 
                           CornerRadius="8" Padding="20" Margin="5">
                        <StackPanel HorizontalAlignment="Center" Cursor="Hand">
                            <TextBlock Text="🔍" FontSize="40" HorizontalAlignment="Center" Foreground="White"/>
                            <TextBlock Text="البحث السريع" FontSize="16" FontWeight="SemiBold" 
                                     HorizontalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Content Area -->
                <Border Background="White" CornerRadius="8" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <TextBlock Text="إحصائيات المرضى" FontSize="18" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}" Margin="0,0,0,20"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Border Grid.Row="0" Grid.Column="0" Background="#e0f7fa" 
                                   CornerRadius="6" Padding="15" Margin="5">
                                <StackPanel>
                                    <TextBlock Text="إجمالي المرضى" FontSize="14" FontWeight="SemiBold" 
                                             Foreground="{StaticResource DarkText}"/>
                                    <TextBlock Text="0" FontSize="28" FontWeight="Bold" 
                                             Foreground="#00695c"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Row="0" Grid.Column="1" Background="#fff3e0" 
                                   CornerRadius="6" Padding="15" Margin="5">
                                <StackPanel>
                                    <TextBlock Text="مرضى جدد هذا الشهر" FontSize="14" FontWeight="SemiBold" 
                                             Foreground="{StaticResource DarkText}"/>
                                    <TextBlock Text="0" FontSize="28" FontWeight="Bold" 
                                             Foreground="#ef6c00"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Row="1" Grid.Column="0" Background="#e8f5e8" 
                                   CornerRadius="6" Padding="15" Margin="5">
                                <StackPanel>
                                    <TextBlock Text="مرضى نشطون" FontSize="14" FontWeight="SemiBold" 
                                             Foreground="{StaticResource DarkText}"/>
                                    <TextBlock Text="0" FontSize="28" FontWeight="Bold" 
                                             Foreground="#2e7d32"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Row="1" Grid.Column="1" Background="#fce4ec" 
                                   CornerRadius="6" Padding="15" Margin="5">
                                <StackPanel>
                                    <TextBlock Text="تحاليل منجزة" FontSize="14" FontWeight="SemiBold" 
                                             Foreground="{StaticResource DarkText}"/>
                                    <TextBlock Text="0" FontSize="28" FontWeight="Bold" 
                                             Foreground="#c2185b"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                        
                        <!-- Coming Soon Message -->
                        <Border Background="#f0f9ff" CornerRadius="6" Padding="20" Margin="0,20,0,0">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="🚧" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="قيد التطوير" FontSize="20" FontWeight="Bold" 
                                         HorizontalAlignment="Center" Foreground="{StaticResource DarkText}"/>
                                <TextBlock Text="سيتم تنفيذ وظائف إدارة المرضى الكاملة في التحديث القادم" 
                                         FontSize="14" HorizontalAlignment="Center" 
                                         Foreground="#64748b" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
