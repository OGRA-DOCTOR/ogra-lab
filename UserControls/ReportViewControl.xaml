<UserControl x:Class="OGRALAB.UserControls.ReportViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OGRALAB.Helpers"
             FlowDirection="RightToLeft"
             FontFamily="Cairo, Segoe UI">
     
    <UserControl.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="PrimaryDark" Color="#1e3a8a"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#f59e0b"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10b981"/>
        <SolidColorBrush x:Key="LightGray" Color="#f8fafc"/>
        <SolidColorBrush x:Key="MediumGray" Color="#64748b"/>
        <SolidColorBrush x:Key="DarkText" Color="#1e293b"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentOrange}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#d97706"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#b45309"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#9ca3af"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{StaticResource AccentGreen}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#047857"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#e2e8f0"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Action Card Style -->
        <Style x:Key="ActionCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource AccentOrange}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#d97706"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
     
    <Grid Background="{StaticResource LightGray}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryDark}" CornerRadius="8,8,0,0" Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📊" FontSize="24" Margin="0,0,10,0"/>
                <StackPanel>
                    <TextBlock Text="معاينة وطباعة التقارير" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="عرض وطباعة تقارير نتائج التحاليل الطبية للمرضى" FontSize="14" Foreground="#cbd5e1"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Search and Filter Section -->
        <Border Grid.Row="1" Background="{StaticResource CardBackground}" Padding="20" BorderBrush="#e2e8f0" BorderThickness="1,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search Controls -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0" 
                           Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                           Style="{StaticResource ModernTextBox}"
                           Tag="البحث عن مريض..."/>
                    
                    <DatePicker Grid.Column="1" 
                               SelectedDate="{Binding DateFrom}"
                               Margin="5,0"/>
                    
                    <DatePicker Grid.Column="2" 
                               SelectedDate="{Binding DateTo}"
                               Margin="5,0"/>
                    
                    <Button Grid.Column="3" 
                           Content="🔍 بحث" 
                           Style="{StaticResource SecondaryButton}"
                           Command="{Binding SearchPatientsCommand}"/>
                    
                    <Button Grid.Column="4" 
                           Content="🔄 تحديث" 
                           Style="{StaticResource PrimaryButton}"
                           Command="{Binding RefreshCommand}"/>
                    
                    <Button Grid.Column="5" 
                           Content="🗑️ مسح" 
                           Style="{StaticResource PrimaryButton}"
                           Background="#dc2626"
                           Command="{Binding ClearSearchCommand}"/>
                </Grid>

                <!-- Quick Actions -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Preview Report Card -->
                    <Border Grid.Column="0" Style="{StaticResource ActionCardStyle}" 
                           Background="{StaticResource AccentGreen}"
                           MouseLeftButtonUp="PreviewReport_Click">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="👁️" FontSize="30" HorizontalAlignment="Center" Foreground="White"/>
                            <TextBlock Text="معاينة التقرير" FontSize="14" FontWeight="SemiBold" 
                                     HorizontalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Print Report Card -->
                    <Border Grid.Column="1" Style="{StaticResource ActionCardStyle}" 
                           Background="{StaticResource AccentOrange}"
                           MouseLeftButtonUp="PrintReport_Click">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="🖨️" FontSize="30" HorizontalAlignment="Center" Foreground="White"/>
                            <TextBlock Text="طباعة التقرير" FontSize="14" FontWeight="SemiBold" 
                                     HorizontalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Manage Test Groups Card -->
                    <Border Grid.Column="2" Style="{StaticResource ActionCardStyle}" 
                           Background="{StaticResource PrimaryDark}"
                           MouseLeftButtonUp="ManageTestGroups_Click">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="⚙️" FontSize="30" HorizontalAlignment="Center" Foreground="White"/>
                            <TextBlock Text="إدارة المجموعات" FontSize="14" FontWeight="SemiBold" 
                                     HorizontalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Patients List -->
            <Border Grid.Column="0" Background="{StaticResource CardBackground}" CornerRadius="8" Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="قائمة المرضى" FontSize="16" FontWeight="Bold" Foreground="{StaticResource DarkText}"/>
                        <Border Background="{StaticResource AccentGreen}" CornerRadius="12" 
                               Padding="6,2" Margin="10,0,0,0">
                            <TextBlock Text="{Binding PatientsCount}" FontSize="12" 
                                     FontWeight="SemiBold" Foreground="White"/>
                        </Border>
                    </StackPanel>

                    <!-- Patients DataGrid -->
                    <DataGrid Grid.Row="1" 
                            ItemsSource="{Binding Patients}"
                            SelectedItem="{Binding SelectedPatient}"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            GridLinesVisibility="Horizontal"
                            HeadersVisibility="Column"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            SelectionMode="Single"
                            FontSize="12">
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="اسم المريض" Binding="{Binding FullName}" Width="*"/>
                            <DataGridTextColumn Header="رقم المريض" Binding="{Binding PatientNumber}" Width="100"/>
                            <DataGridTextColumn Header="تاريخ التسجيل" Binding="{Binding CreatedDate, StringFormat=dd/MM/yyyy}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- No Patients Message -->
                    <Border Grid.Row="1" Background="#f0f9ff" CornerRadius="6" Padding="20" 
                           Visibility="{Binding PatientsCount, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Inverse}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="👥" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="لا توجد مرضى" FontSize="16" FontWeight="SemiBold" 
                                     HorizontalAlignment="Center" Foreground="{StaticResource DarkText}"/>
                            <TextBlock Text="ابدأ بالبحث لعرض المرضى" 
                                     FontSize="14" HorizontalAlignment="Center" 
                                     Foreground="{StaticResource MediumGray}" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Patient Tests and Results -->
            <Border Grid.Column="2" Background="{StaticResource CardBackground}" CornerRadius="8" Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="التحاليل المكتملة" FontSize="16" FontWeight="Bold" Foreground="{StaticResource DarkText}"/>
                        <Border Background="{StaticResource AccentOrange}" CornerRadius="12" 
                               Padding="6,2" Margin="10,0,0,0">
                            <TextBlock Text="{Binding CompletedTestsCount}" FontSize="12" 
                                     FontWeight="SemiBold" Foreground="White"/>
                        </Border>
                    </StackPanel>

                    <!-- Completed Tests List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                                 Visibility="{Binding HasCompletedTests, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ItemsControl ItemsSource="{Binding CompletedTests}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#f0fdf4" CornerRadius="6" Padding="12" Margin="0,0,0,8"
                                           MouseLeftButtonUp="CompletedTest_Click"
                                           Cursor="Hand"
                                           Tag="{Binding}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding TestType.TestName}" FontWeight="SemiBold"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="مكتمل في: " FontSize="11" Foreground="{StaticResource MediumGray}"/>
                                                    <TextBlock Text="{Binding CompletedDate, StringFormat=dd/MM/yyyy}" 
                                                             FontSize="11" Foreground="{StaticResource MediumGray}"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <Border Grid.Column="1" Background="{StaticResource AccentGreen}" 
                                                   CornerRadius="12" Padding="6,2" Margin="5,0,5,0">
                                                <TextBlock Text="مكتمل" FontSize="10" 
                                                         FontWeight="SemiBold" Foreground="White"/>
                                            </Border>
                                            
                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <Button Content="👁️" 
                                                       Background="Transparent"
                                                       BorderThickness="0"
                                                       FontSize="14"
                                                       Cursor="Hand"
                                                       Click="PreviewTestResult_Click"
                                                       Tag="{Binding}"
                                                       ToolTip="معاينة"/>
                                                <Button Content="🖨️" 
                                                       Background="Transparent"
                                                       BorderThickness="0"
                                                       FontSize="14"
                                                       Cursor="Hand"
                                                       Click="PrintTestResult_Click"
                                                       Tag="{Binding}"
                                                       ToolTip="طباعة"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- No Tests Message -->
                    <Border Grid.Row="1" Background="#f0f9ff" CornerRadius="6" Padding="20" 
                           Visibility="{Binding HasCompletedTests, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="🧪" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="لا توجد تحاليل مكتملة" FontSize="16" FontWeight="SemiBold" 
                                     HorizontalAlignment="Center" Foreground="{StaticResource DarkText}"/>
                            <TextBlock Text="اختر مريضاً لعرض تحاليله المكتملة" 
                                     FontSize="14" HorizontalAlignment="Center" 
                                     Foreground="{StaticResource MediumGray}" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,15,0,0" 
                               Visibility="{Binding HasSelectedPatient, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Button Content="👁️ معاينة التقرير" 
                               Style="{StaticResource SecondaryButton}"
                               Command="{Binding PreviewReportCommand}"
                               Padding="15,8"/>
                        
                        <Button Content="🖨️ طباعة التقرير" 
                               Style="{StaticResource PrimaryButton}"
                               Command="{Binding PrintReportCommand}"
                               Padding="15,8"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3" 
             Background="#80000000" 
             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                           Width="200" 
                           Height="4" 
                           Background="Transparent" 
                           Foreground="{StaticResource AccentOrange}"/>
                <TextBlock Text="جاري المعالجة..." 
                         Foreground="White" 
                         FontSize="16" 
                         Margin="0,15,0,0"
                         HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
