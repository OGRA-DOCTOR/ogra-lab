<UserControl x:Class="OGRALAB.UserControls.ResultEntryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OGRALAB.Helpers"
             FlowDirection="RightToLeft"
             FontFamily="Cairo, Segoe UI">
     
    <UserControl.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="PrimaryDark" Color="#1e3a8a"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#f59e0b"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10b981"/>
        <SolidColorBrush x:Key="LightGray" Color="#f8fafc"/>
        <SolidColorBrush x:Key="MediumGray" Color="#64748b"/>
        <SolidColorBrush x:Key="DarkText" Color="#1e293b"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>

        <!-- Button Styles -->
        <Style x:Key="ActionCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource AccentOrange}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#d97706"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
     
    <Grid Background="{StaticResource LightGray}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryDark}" CornerRadius="8,8,0,0" Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🧪" FontSize="24" Margin="0,0,10,0"/>
                <StackPanel>
                    <TextBlock Text="إدخال النتائج" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="إدخال وتسجيل نتائج التحاليل الطبية للمرضى" FontSize="14" Foreground="#cbd5e1"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Quick Actions -->
        <Border Grid.Row="1" Background="{StaticResource CardBackground}" Padding="20" BorderBrush="#e2e8f0" BorderThickness="1,0,1,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Enter Results Card -->
                <Border Grid.Column="0" Style="{StaticResource ActionCardStyle}" 
                       Background="{StaticResource AccentOrange}"
                       MouseLeftButtonUp="OpenResultEntryWindow_Click">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="📝" FontSize="40" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="إدخال النتائج" FontSize="16" FontWeight="SemiBold" 
                                 HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="فتح نافذة إدخال النتائج" FontSize="12" 
                                 HorizontalAlignment="Center" Foreground="#fed7aa"/>
                    </StackPanel>
                </Border>
                
                <!-- Test Management Card -->
                <Border Grid.Column="1" Style="{StaticResource ActionCardStyle}" 
                       Background="{StaticResource AccentGreen}"
                       MouseLeftButtonUp="OpenTestManagement_Click">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="⚙️" FontSize="40" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="إدارة التحاليل" FontSize="16" FontWeight="SemiBold" 
                                 HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="أنواع ومجموعات التحاليل" FontSize="12" 
                                 HorizontalAlignment="Center" Foreground="#a7f3d0"/>
                    </StackPanel>
                </Border>
                
                <!-- Quick Search Card -->
                <Border Grid.Column="2" Style="{StaticResource ActionCardStyle}" 
                       Background="{StaticResource PrimaryDark}"
                       MouseLeftButtonUp="OpenQuickSearch_Click">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="🔍" FontSize="40" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="بحث سريع" FontSize="16" FontWeight="SemiBold" 
                                 HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="بحث التحاليل والنتائج" FontSize="12" 
                                 HorizontalAlignment="Center" Foreground="#cbd5e1"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Pending Tests -->
            <Border Grid.Column="0" Background="{StaticResource CardBackground}" CornerRadius="8" Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="التحاليل المعلقة" FontSize="16" FontWeight="Bold" Foreground="{StaticResource DarkText}"/>
                        <Border Background="#fbbf24" CornerRadius="12" Padding="6,2" Margin="10,0,0,0">
                            <TextBlock Text="{Binding PendingTestsCount}" FontSize="12" FontWeight="SemiBold" Foreground="White"/>
                        </Border>
                    </StackPanel>

                    <!-- Pending Tests List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding PendingTests}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#fff7ed" CornerRadius="6" Padding="12" Margin="0,0,0,8"
                                           MouseLeftButtonUp="PendingTest_Click"
                                           Cursor="Hand"
                                           Tag="{Binding}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding TestType.TestName}" FontWeight="SemiBold"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Patient.FullName}" FontSize="12" 
                                                             Foreground="{StaticResource MediumGray}"/>
                                                    <TextBlock Text=" - " FontSize="12" Foreground="{StaticResource MediumGray}"/>
                                                    <TextBlock Text="{Binding OrderDate, StringFormat=dd/MM/yyyy}" 
                                                             FontSize="12" Foreground="{StaticResource MediumGray}"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <Border Grid.Column="1" Background="#fbbf24" CornerRadius="12" Padding="6,2">
                                                <TextBlock Text="معلق" FontSize="10" FontWeight="SemiBold" Foreground="White"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Load More / Refresh Button -->
                    <Button Grid.Row="2" Content="🔄 تحديث" 
                           Background="{StaticResource AccentGreen}" 
                           Foreground="White" 
                           BorderThickness="0" 
                           Padding="10,6" 
                           Margin="0,15,0,0"
                           HorizontalAlignment="Center"
                           Click="RefreshPendingTests_Click"/>
                </Grid>
            </Border>

            <!-- Recent Results -->
            <Border Grid.Column="2" Background="{StaticResource CardBackground}" CornerRadius="8" Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="النتائج الحديثة" FontSize="16" FontWeight="Bold" Foreground="{StaticResource DarkText}"/>
                        <Border Background="{StaticResource AccentGreen}" CornerRadius="12" Padding="6,2" Margin="10,0,0,0">
                            <TextBlock Text="{Binding RecentResultsCount}" FontSize="12" FontWeight="SemiBold" Foreground="White"/>
                        </Border>
                    </StackPanel>

                    <!-- Recent Results List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding RecentResults}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#f0fdf4" CornerRadius="6" Padding="12" Margin="0,0,0,8"
                                           MouseLeftButtonUp="RecentResult_Click"
                                           Cursor="Hand"
                                           Tag="{Binding}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding PatientTest.TestType.TestName}" FontWeight="SemiBold"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding PatientTest.Patient.FullName}" FontSize="12" 
                                                             Foreground="{StaticResource MediumGray}"/>
                                                    <TextBlock Text=" - " FontSize="12" Foreground="{StaticResource MediumGray}"/>
                                                    <TextBlock Text="{Binding EnteredDate, StringFormat=dd/MM/yyyy}" 
                                                             FontSize="12" Foreground="{StaticResource MediumGray}"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <Border Grid.Column="1" CornerRadius="12" Padding="6,2">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsNormal}" Value="True">
                                                                <Setter Property="Background" Value="{StaticResource AccentGreen}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsNormal}" Value="False">
                                                                <Setter Property="Background" Value="#dc2626"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock FontSize="10" FontWeight="SemiBold" Foreground="White">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsNormal}" Value="True">
                                                                    <Setter Property="Text" Value="طبيعي"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsNormal}" Value="False">
                                                                    <Setter Property="Text" Value="شاذ"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty State -->
                    <Border Grid.Row="1" Background="#f0f9ff" CornerRadius="6" Padding="20" 
                           Visibility="{Binding HasRecentResults, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="📊" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="لا توجد نتائج حديثة" FontSize="16" FontWeight="SemiBold" 
                                     HorizontalAlignment="Center" Foreground="{StaticResource DarkText}"/>
                            <TextBlock Text="ابدأ بإدخال النتائج لرؤيتها هنا" 
                                     FontSize="14" HorizontalAlignment="Center" 
                                     Foreground="{StaticResource MediumGray}" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3" 
             Background="#80000000" 
             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                           Width="200" 
                           Height="4" 
                           Background="Transparent" 
                           Foreground="{StaticResource AccentOrange}"/>
                <TextBlock Text="جاري التحميل..." 
                         Foreground="White" 
                         FontSize="16" 
                         Margin="0,15,0,0"
                         HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
