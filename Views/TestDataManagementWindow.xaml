&lt;Window x:Class="OGRALAB.Views.TestDataManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:OGRALAB.Helpers"
        Title="🧪 إدارة البيانات التجريبية - OGRA LAB" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        FontFamily="Segoe UI"
        ResizeMode="CanResize"
        MinHeight="600" MinWidth="800">

    <Window.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="SectionCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="{TemplateBinding Border.CornerRadius}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#27AE60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#F39C12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E67E22"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#34495E" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="🧪" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="إدارة البيانات التجريبية" 
                             FontSize="20" FontWeight="Bold" 
                             Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        Content="❌ إغلاق" 
                        Style="{StaticResource DangerButtonStyle}"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>

        <!-- Loading Indicator -->
        <Grid Grid.Row="1" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="#80000000"/>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="10" Margin="10"/>
                <TextBlock Text="{Binding LoadingMessage}" FontSize="14" Foreground="White" 
                         HorizontalAlignment="Center" Margin="10"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                      Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
            <StackPanel Margin="10">
                
                <!-- Summary Section -->
                <Border Style="{StaticResource SectionCardStyle}">
                    <StackPanel>
                        <TextBlock Text="📊 ملخص البيانات الحالية" Style="{StaticResource HeaderTextStyle}"/>
                        
                        <UniformGrid Columns="4" Margin="0,10">
                            <StackPanel HorizontalAlignment="Center" Margin="10">
                                <TextBlock Text="👥" FontSize="24" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalUsers}" FontSize="18" FontWeight="Bold" 
                                         HorizontalAlignment="Center" Foreground="#3498DB"/>
                                <TextBlock Text="المستخدمون" FontSize="12" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel HorizontalAlignment="Center" Margin="10">
                                <TextBlock Text="🏥" FontSize="24" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalPatients}" FontSize="18" FontWeight="Bold" 
                                         HorizontalAlignment="Center" Foreground="#27AE60"/>
                                <TextBlock Text="المرضى" FontSize="12" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel HorizontalAlignment="Center" Margin="10">
                                <TextBlock Text="🔬" FontSize="24" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalTestTypes}" FontSize="18" FontWeight="Bold" 
                                         HorizontalAlignment="Center" Foreground="#E74C3C"/>
                                <TextBlock Text="أنواع التحاليل" FontSize="12" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel HorizontalAlignment="Center" Margin="10">
                                <TextBlock Text="📋" FontSize="24" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalPatientTests}" FontSize="18" FontWeight="Bold" 
                                         HorizontalAlignment="Center" Foreground="#F39C12"/>
                                <TextBlock Text="التحاليل" FontSize="12" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </UniformGrid>
                        
                        <Separator Margin="0,10"/>
                        
                        <UniformGrid Columns="3" Margin="0,10">
                            <StackPanel HorizontalAlignment="Center" Margin="10">
                                <TextBlock Text="📝" FontSize="20" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalTestResults}" FontSize="16" FontWeight="Bold" 
                                         HorizontalAlignment="Center" Foreground="#9B59B6"/>
                                <TextBlock Text="النتائج" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel HorizontalAlignment="Center" Margin="10">
                                <TextBlock Text="📦" FontSize="20" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalTestGroups}" FontSize="16" FontWeight="Bold" 
                                         HorizontalAlignment="Center" Foreground="#16A085"/>
                                <TextBlock Text="المجموعات" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel HorizontalAlignment="Center" Margin="10">
                                <TextBlock Text="🧪" FontSize="20" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding SampleDataCount}" FontSize="16" FontWeight="Bold" 
                                         HorizontalAlignment="Center" Foreground="#E67E22"/>
                                <TextBlock Text="البيانات التجريبية" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </UniformGrid>
                    </StackPanel>
                </Border>

                <!-- Sample Data Creation -->
                <Border Style="{StaticResource SectionCardStyle}">
                    <StackPanel>
                        <TextBlock Text="➕ إنشاء البيانات التجريبية" Style="{StaticResource HeaderTextStyle}"/>
                        
                        <TextBlock Text="اختر نوع البيانات التجريبية المراد إنشاؤها:" 
                                 Margin="0,0,0,15" FontSize="12" Foreground="#7F8C8D"/>
                        
                        <UniformGrid Columns="2" Margin="0,10">
                            <StackPanel Margin="0,0,10,0">
                                <TextBlock Text="🎯 البيانات الأساسية" FontWeight="Bold" Margin="0,0,0,10"/>
                                <WrapPanel>
                                    <Button Content="👥 مستخدمون (4)" Style="{StaticResource ActionButtonStyle}"
                                            Command="{Binding CreateSampleUsersCommand}"/>
                                    <Button Content="🔬 أنواع التحاليل (22)" Style="{StaticResource ActionButtonStyle}"
                                            Command="{Binding CreateSampleTestTypesCommand}"/>
                                    <Button Content="📦 مجموعات التحاليل (6)" Style="{StaticResource ActionButtonStyle}"
                                            Command="{Binding CreateSampleTestGroupsCommand}"/>
                                </WrapPanel>
                            </StackPanel>
                            
                            <StackPanel Margin="10,0,0,0">
                                <TextBlock Text="🏥 بيانات المرضى والتحاليل" FontWeight="Bold" Margin="0,0,0,10"/>
                                <WrapPanel>
                                    <Button Content="🏥 مرضى (50)" Style="{StaticResource ActionButtonStyle}"
                                            Command="{Binding CreateSamplePatientsCommand}"/>
                                    <Button Content="📋 تحاليل المرضى (150)" Style="{StaticResource ActionButtonStyle}"
                                            Command="{Binding CreateSamplePatientTestsCommand}"/>
                                    <Button Content="📝 نتائج التحاليل" Style="{StaticResource ActionButtonStyle}"
                                            Command="{Binding CreateSampleTestResultsCommand}"/>
                                </WrapPanel>
                            </StackPanel>
                        </UniformGrid>
                        
                        <Separator Margin="0,20,0,10"/>
                        
                        <TextBlock Text="📦 مجموعات البيانات الجاهزة" FontWeight="Bold" Margin="0,0,0,10"/>
                        <WrapPanel>
                            <Button Content="🎪 بيانات تجريبية كاملة" Style="{StaticResource SuccessButtonStyle}"
                                    Command="{Binding CreateFullSampleDataCommand}"/>
                            <Button Content="🎭 سيناريو العرض التوضيحي" Style="{StaticResource ActionButtonStyle}"
                                    Command="{Binding CreateDemoScenarioCommand}"/>
                            <Button Content="⚡ بيانات اختبار الأداء" Style="{StaticResource WarningButtonStyle}"
                                    Command="{Binding CreatePerformanceTestDataCommand}"/>
                            <Button Content="📊 بيانات اختبار التقارير" Style="{StaticResource ActionButtonStyle}"
                                    Command="{Binding CreateReportingTestDataCommand}"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Data Management -->
                <Border Style="{StaticResource SectionCardStyle}">
                    <StackPanel>
                        <TextBlock Text="🗂️ إدارة البيانات" Style="{StaticResource HeaderTextStyle}"/>
                        
                        <UniformGrid Columns="2" Margin="0,10">
                            <StackPanel Margin="0,0,10,0">
                                <TextBlock Text="🔍 التحقق والتحليل" FontWeight="Bold" Margin="0,0,0,10"/>
                                <WrapPanel>
                                    <Button Content="✅ التحقق من سلامة البيانات" Style="{StaticResource ActionButtonStyle}"
                                            Command="{Binding ValidateDataIntegrityCommand}"/>
                                    <Button Content="📈 ملخص البيانات" Style="{StaticResource ActionButtonStyle}"
                                            Command="{Binding GetDataSummaryCommand}"/>
                                    <Button Content="🔄 تحديث الإحصائيات" Style="{StaticResource ActionButtonStyle}"
                                            Command="{Binding RefreshStatisticsCommand}"/>
                                </WrapPanel>
                            </StackPanel>
                            
                            <StackPanel Margin="10,0,0,0">
                                <TextBlock Text="🗑️ تنظيف البيانات" FontWeight="Bold" Margin="0,0,0,10"/>
                                <WrapPanel>
                                    <Button Content="🧹 مسح البيانات التجريبية" Style="{StaticResource DangerButtonStyle}"
                                            Command="{Binding ClearSampleDataCommand}"/>
                                    <Button Content="⚠️ مسح جميع البيانات" Style="{StaticResource DangerButtonStyle}"
                                            Command="{Binding ClearAllDataCommand}"/>
                                </WrapPanel>
                            </StackPanel>
                        </UniformGrid>
                    </StackPanel>
                </Border>

                <!-- Status and Messages -->
                <Border Style="{StaticResource SectionCardStyle}" 
                        Visibility="{Binding HasMessages, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="📢 الرسائل والحالة" Style="{StaticResource HeaderTextStyle}"/>
                        
                        <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Messages}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding BackgroundColor}" 
                                                CornerRadius="4" Margin="0,2" Padding="10,5">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Icon}" FontSize="14" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Message}" FontSize="12" 
                                                         Foreground="{Binding TextColor}" TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}" 
                                                         FontSize="10" Foreground="#95A5A6" 
                                                         HorizontalAlignment="Right" Margin="10,0,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        
                        <Button Content="🗑️ مسح الرسائل" Style="{StaticResource ActionButtonStyle}"
                                Command="{Binding ClearMessagesCommand}" 
                                HorizontalAlignment="Left" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="15,10" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="⚡ آخر تحديث:" FontSize="11" Foreground="#7F8C8D" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding LastUpdateTime, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" 
                             FontSize="11" Foreground="#34495E"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="🔄 تحديث" Style="{StaticResource ActionButtonStyle}"
                            Command="{Binding RefreshCommand}" Margin="5,0"/>
                    <Button Content="💾 حفظ السجل" Style="{StaticResource SuccessButtonStyle}"
                            Command="{Binding SaveLogCommand}" Margin="5,0"/>
                    <Button Content="🚪 إغلاق" Style="{StaticResource DangerButtonStyle}"
                            Click="CloseButton_Click" Margin="5,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
