<Window x:Class="OGRALAB.Views.TestResultEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:OGRALAB.Helpers"
        Title="إدخال نتائج التحاليل - OGRA LAB"
        Height="700" Width="1200"
        WindowStartupLocation="CenterOwner"
        FlowDirection="RightToLeft"
        FontFamily="Cairo, Segoe UI">
    
    <Window.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="PrimaryDark" Color="#1e3a8a"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#f59e0b"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10b981"/>
        <SolidColorBrush x:Key="LightGray" Color="#f8fafc"/>
        <SolidColorBrush x:Key="MediumGray" Color="#64748b"/>
        <SolidColorBrush x:Key="DarkText" Color="#1e293b"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>
        <SolidColorBrush x:Key="DangerRed" Color="#dc2626"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#16a34a"/>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentOrange}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#d97706"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#b45309"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#9ca3af"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{StaticResource AccentGreen}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#047857"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{StaticResource DangerRed}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#b91c1c"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#991b1b"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#e2e8f0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource AccentOrange}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource AccentGreen}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Result Value TextBox Style with color indication -->
        <Style x:Key="ResultValueTextBox" TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsOutOfRange}" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource DangerRed}"/>
                    <Setter Property="Background" Value="#fef2f2"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsOutOfRange}" Value="False">
                    <Setter Property="BorderBrush" Value="{StaticResource SuccessGreen}"/>
                    <Setter Property="Background" Value="#f0fdf4"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- ListBox Style -->
        <Style x:Key="ModernListBox" TargetType="ListBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#e2e8f0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource LightGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryDark}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Ellipse Width="40" Height="40" Fill="{StaticResource AccentOrange}" Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock Text="إدخال نتائج التحاليل" FontSize="22" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="إدخال وتحديث نتائج التحاليل المطلوبة للمرضى" FontSize="14" Foreground="#cbd5e1"/>
                    </StackPanel>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        Content="✕ إغلاق" 
                        Style="{StaticResource DangerButton}"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Patient Search and Tests -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Patient Search -->
                <Border Grid.Row="0" Background="{StaticResource CardBackground}" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <TextBlock Text="البحث عن المريض" FontSize="16" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}" Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0" 
                                   Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource ModernTextBox}"
                                   Tag="اسم المريض أو رقم المريض..."
                                   KeyDown="SearchTextBox_KeyDown"/>
                            
                            <Button Grid.Column="1" 
                                   Content="🔍 بحث"
                                   Style="{StaticResource SecondaryButton}"
                                   Command="{Binding SearchPatientCommand}"/>
                            
                            <Button Grid.Column="2" 
                                   Content="🔄 تحديث"
                                   Style="{StaticResource PrimaryButton}"
                                   Command="{Binding RefreshCommand}"/>
                        </Grid>

                        <!-- Patient Info Display -->
                        <Border Background="#f0f9ff" CornerRadius="6" Padding="15" Margin="0,15,0,0"
                               Visibility="{Binding SelectedPatient, Converter={StaticResource NullToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="المريض المختار:" FontSize="12" Foreground="{StaticResource MediumGray}"/>
                                <TextBlock Text="{Binding PatientInfo}" FontSize="14" FontWeight="SemiBold" 
                                         Foreground="{StaticResource DarkText}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Tests Lists -->
                <Border Grid.Row="2" Background="{StaticResource CardBackground}" CornerRadius="8" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                    </Border.Effect>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Pending Tests -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="التحاليل المعلقة" FontSize="16" FontWeight="Bold" 
                                     Foreground="{StaticResource DarkText}"/>
                            <Border Background="{StaticResource AccentOrange}" CornerRadius="12" 
                                   Padding="6,2" Margin="10,0,0,0">
                                <TextBlock Text="{Binding PendingTests.Count}" FontSize="12" 
                                         FontWeight="SemiBold" Foreground="White"/>
                            </Border>
                        </StackPanel>

                        <ListBox Grid.Row="1" 
                               ItemsSource="{Binding PendingTests}"
                               SelectedItem="{Binding SelectedPatientTest}"
                               Style="{StaticResource ModernListBox}"
                               Margin="0,0,0,15">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" Padding="10,8" Margin="2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding TestType.TestName}" FontWeight="SemiBold"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Patient.FullName}" 
                                                             FontSize="12" Foreground="{StaticResource MediumGray}"/>
                                                    <TextBlock Text=" - " FontSize="12" Foreground="{StaticResource MediumGray}"/>
                                                    <TextBlock Text="{Binding OrderDate, StringFormat=dd/MM/yyyy}" 
                                                             FontSize="12" Foreground="{StaticResource MediumGray}"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <Border Grid.Column="1" Background="{StaticResource AccentOrange}" 
                                                   CornerRadius="12" Padding="6,2">
                                                <TextBlock Text="{Binding Status}" FontSize="10" 
                                                         FontWeight="SemiBold" Foreground="White"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Completed Tests -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,15,0,10">
                            <TextBlock Text="التحاليل المكتملة" FontSize="16" FontWeight="Bold" 
                                     Foreground="{StaticResource DarkText}"/>
                            <Border Background="{StaticResource AccentGreen}" CornerRadius="12" 
                                   Padding="6,2" Margin="10,0,0,0">
                                <TextBlock Text="{Binding CompletedTests.Count}" FontSize="12" 
                                         FontWeight="SemiBold" Foreground="White"/>
                            </Border>
                        </StackPanel>

                        <ListBox Grid.Row="3" 
                               ItemsSource="{Binding CompletedTests}"
                               Style="{StaticResource ModernListBox}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#f0fdf4" Padding="10,8" Margin="2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding TestType.TestName}" FontWeight="SemiBold"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Patient.FullName}" 
                                                             FontSize="12" Foreground="{StaticResource MediumGray}"/>
                                                    <TextBlock Text=" - " FontSize="12" Foreground="{StaticResource MediumGray}"/>
                                                    <TextBlock Text="{Binding CompletedDate, StringFormat=dd/MM/yyyy}" 
                                                             FontSize="12" Foreground="{StaticResource MediumGray}"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <Border Grid.Column="1" Background="{StaticResource AccentGreen}" 
                                                   CornerRadius="12" Padding="6,2">
                                                <TextBlock Text="مكتمل" FontSize="10" 
                                                         FontWeight="SemiBold" Foreground="White"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>

            <!-- Right Panel - Result Entry -->
            <Grid Grid.Column="2">
                <Border Background="{StaticResource CardBackground}" CornerRadius="8" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <TextBlock Text="إدخال النتيجة" FontSize="18" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}" Margin="0,0,0,20"/>

                        <!-- Test Information -->
                        <Border Background="#f8fafc" CornerRadius="6" Padding="15" Margin="0,0,0,20"
                               Visibility="{Binding SelectedPatientTest, Converter={StaticResource NullToVisibilityConverter}}">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="اسم التحليل:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TestName}" Margin="0,0,0,5"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="وحدة القياس:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding TestUnit}" Margin="0,0,0,5"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="المعدل الطبيعي:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding NormalRange}" Margin="0,0,0,5"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="المريض:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding PatientInfo}"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Result Input -->
                        <StackPanel Visibility="{Binding SelectedPatientTest, Converter={StaticResource NullToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="قيمة النتيجة *" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock Text=" *" FontWeight="Bold" Foreground="{StaticResource DangerRed}" 
                                         Margin="5,0,0,0"
                                         Visibility="{Binding IsOutOfRange, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </StackPanel>
                            
                            <TextBox Text="{Binding ResultValue, UpdateSourceTrigger=PropertyChanged}" 
                                   Style="{StaticResource ResultValueTextBox}"
                                   FontSize="16" Padding="12,8"/>

                            <!-- Out of range indicator -->
                            <Border Background="#fef2f2" BorderBrush="{StaticResource DangerRed}" 
                                   BorderThickness="1" CornerRadius="4" Padding="8" Margin="0,5,0,0"
                                   Visibility="{Binding IsOutOfRange, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⚠️" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="القيمة خارج النطاق الطبيعي" 
                                             FontWeight="SemiBold" Foreground="{StaticResource DangerRed}"/>
                                </StackPanel>
                            </Border>

                            <!-- Normal range indicator -->
                            <Border Background="#f0fdf4" BorderBrush="{StaticResource SuccessGreen}" 
                                   BorderThickness="1" CornerRadius="4" Padding="8" Margin="0,5,0,0"
                                   Visibility="{Binding IsOutOfRange, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✅" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="القيمة ضمن النطاق الطبيعي" 
                                             FontWeight="SemiBold" Foreground="{StaticResource SuccessGreen}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Notes -->
                        <StackPanel Margin="0,20,0,0" 
                                  Visibility="{Binding SelectedPatientTest, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="ملاحظات (اختياري)" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Notes}" 
                                   Style="{StaticResource ModernTextBox}"
                                   AcceptsReturn="True" 
                                   TextWrapping="Wrap" 
                                   Height="80"/>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                            <Button Content="💾 حفظ النتيجة" 
                                   Style="{StaticResource PrimaryButton}"
                                   Command="{Binding SaveResultCommand}"
                                   Padding="20,10"/>
                            
                            <Button Content="🔄 قيد المعالجة" 
                                   Style="{StaticResource SecondaryButton}"
                                   Command="{Binding MarkInProgressCommand}"
                                   Padding="15,10"/>
                            
                            <Button Content="🗑️ مسح" 
                                   Style="{StaticResource DangerButton}"
                                   Command="{Binding ClearResultCommand}"
                                   Padding="15,10"/>
                        </StackPanel>

                        <!-- No Test Selected Message -->
                        <Border Background="#f0f9ff" CornerRadius="6" Padding="20" 
                               Visibility="{Binding SelectedPatientTest, Converter={StaticResource InverseNullToVisibilityConverter}}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="🧪" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="لم يتم اختيار تحليل" FontSize="16" FontWeight="SemiBold" 
                                         HorizontalAlignment="Center" Foreground="{StaticResource DarkText}"/>
                                <TextBlock Text="اختر تحليلاً من القائمة لبدء إدخال النتيجة" 
                                         FontSize="14" HorizontalAlignment="Center" 
                                         Foreground="{StaticResource MediumGray}" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Error Message -->
        <Border Grid.Row="2" Background="#fee2e2" CornerRadius="6" Padding="15" 
                Margin="20,0,20,10"
                Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="⚠️" FontSize="16" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="#dc2626" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3" 
             Background="#80000000" 
             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                           Width="200" 
                           Height="4" 
                           Background="Transparent" 
                           Foreground="{StaticResource AccentOrange}"/>
                <TextBlock Text="جاري المعالجة..." 
                         Foreground="White" 
                         FontSize="16" 
                         Margin="0,15,0,0"
                         HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
