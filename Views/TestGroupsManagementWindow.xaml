<Window x:Class="OGRALAB.Views.TestGroupsManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:OGRALAB.Helpers"
        Title="إدارة مجموعات التحاليل - OGRA LAB"
        Height="700" Width="1100"
        WindowStartupLocation="CenterOwner"
        FlowDirection="RightToLeft"
        FontFamily="Cairo, Segoe UI">
    
    <Window.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="PrimaryDark" Color="#1e3a8a"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#f59e0b"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10b981"/>
        <SolidColorBrush x:Key="AccentRed" Color="#dc2626"/>
        <SolidColorBrush x:Key="LightGray" Color="#f8fafc"/>
        <SolidColorBrush x:Key="MediumGray" Color="#64748b"/>
        <SolidColorBrush x:Key="DarkText" Color="#1e293b"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentOrange}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#d97706"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#b45309"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#9ca3af"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{StaticResource AccentGreen}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#047857"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{StaticResource AccentRed}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#b91c1c"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#991b1b"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#e2e8f0"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource LightGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryDark}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="⚙️" FontSize="24" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="إدارة مجموعات التحاليل" FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="إنشاء وتعديل وحذف مجموعات أنواع التحاليل الطبية" FontSize="14" Foreground="#cbd5e1"/>
                    </StackPanel>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        Content="✕ إغلاق" 
                        Style="{StaticResource DangerButton}"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Test Groups List -->
            <Border Grid.Column="0" Background="{StaticResource CardBackground}" CornerRadius="8" Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Groups Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="مجموعات التحاليل" FontSize="16" FontWeight="Bold" Foreground="{StaticResource DarkText}"/>
                        <Border Background="{StaticResource AccentGreen}" CornerRadius="12" 
                               Padding="6,2" Margin="10,0,0,0">
                            <TextBlock Text="{Binding TestGroupsCount}" FontSize="12" 
                                     FontWeight="SemiBold" Foreground="White"/>
                        </Border>
                    </StackPanel>

                    <!-- Groups List -->
                    <DataGrid Grid.Row="1" 
                            ItemsSource="{Binding TestGroups}"
                            SelectedItem="{Binding SelectedTestGroup}"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            GridLinesVisibility="Horizontal"
                            HeadersVisibility="Column"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            SelectionMode="Single"
                            FontSize="12">
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="اسم المجموعة" Binding="{Binding GroupName}" Width="*"/>
                            <DataGridTextColumn Header="الوصف" Binding="{Binding Description}" Width="*"/>
                            <DataGridTextColumn Header="تاريخ الإنشاء" Binding="{Binding CreatedDate, StringFormat=dd/MM/yyyy}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- No Groups Message -->
                    <Border Grid.Row="1" Background="#f0f9ff" CornerRadius="6" Padding="20" 
                           Visibility="{Binding HasTestGroups, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="⚙️" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="لا توجد مجموعات تحاليل" FontSize="16" FontWeight="SemiBold" 
                                     HorizontalAlignment="Center" Foreground="{StaticResource DarkText}"/>
                            <TextBlock Text="ابدأ بإنشاء مجموعة جديدة" 
                                     FontSize="14" HorizontalAlignment="Center" 
                                     Foreground="{StaticResource MediumGray}" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Groups Action Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,15,0,0">
                        <Button Content="📝 تعديل" 
                               Style="{StaticResource PrimaryButton}"
                               Command="{Binding EditGroupCommand}"/>
                        
                        <Button Content="🗑️ حذف" 
                               Style="{StaticResource DangerButton}"
                               Command="{Binding DeleteGroupCommand}"/>
                        
                        <Button Content="🔄 تحديث" 
                               Style="{StaticResource SecondaryButton}"
                               Command="{Binding LoadDataCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right Panel: Create/Edit Group -->
            <Border Grid.Column="2" Background="{StaticResource CardBackground}" CornerRadius="8" Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Border.Effect>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Panel Header -->
                        <TextBlock Text="{Binding IsEditMode, Converter={StaticResource BoolToTextConverter}, ConverterParameter='تعديل المجموعة|إنشاء مجموعة جديدة'}" 
                                 FontSize="16" FontWeight="Bold" Foreground="{StaticResource DarkText}" Margin="0,0,0,20"/>

                        <!-- Group Information -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="اسم المجموعة *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding GroupName, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="وصف المجموعة" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding GroupDescription, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource ModernTextBox}"
                                   AcceptsReturn="True"
                                   TextWrapping="Wrap"
                                   Height="60"/>
                        </StackPanel>

                        <!-- Test Types Selection -->
                        <Grid Margin="0,0,0,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="150"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="150"/>
                            </Grid.RowDefinitions>

                            <!-- Available Test Types -->
                            <TextBlock Grid.Row="0" Text="أنواع التحاليل المتاحة" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <Border Grid.Row="1" BorderBrush="#e2e8f0" BorderThickness="2" CornerRadius="4">
                                <ListBox ItemsSource="{Binding AvailableTestTypes}"
                                       SelectedItem="{Binding SelectedAvailableTestType}"
                                       ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="5">
                                                <TextBlock Text="{Binding TestName}" FontWeight="SemiBold"/>
                                                <TextBlock Text=" - " Margin="5,0"/>
                                                <TextBlock Text="{Binding Category}" FontSize="11" Foreground="{StaticResource MediumGray}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Border>

                            <!-- Control Buttons -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                                <Button Content="⬇️ إضافة" 
                                       Style="{StaticResource SecondaryButton}"
                                       Command="{Binding AddTestTypeCommand}"
                                       Padding="20,6"/>
                                
                                <Button Content="⬆️ إزالة" 
                                       Style="{StaticResource DangerButton}"
                                       Command="{Binding RemoveTestTypeCommand}"
                                       Padding="20,6"/>
                            </StackPanel>

                            <!-- Selected Test Types -->
                            <StackPanel Grid.Row="3">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="أنواع التحاليل المختارة" FontWeight="SemiBold"/>
                                    <Border Background="{StaticResource AccentOrange}" CornerRadius="12" 
                                           Padding="6,2" Margin="10,0,0,0">
                                        <TextBlock Text="{Binding SelectedTestTypesCount}" FontSize="12" 
                                                 FontWeight="SemiBold" Foreground="White"/>
                                    </Border>
                                </StackPanel>
                                <Border BorderBrush="#e2e8f0" BorderThickness="2" CornerRadius="4">
                                    <ListBox ItemsSource="{Binding SelectedTestTypes}"
                                           SelectedItem="{Binding SelectedGroupTestType}"
                                           ScrollViewer.VerticalScrollBarVisibility="Auto">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="5">
                                                    <TextBlock Text="{Binding TestName}" FontWeight="SemiBold"/>
                                                    <TextBlock Text=" - " Margin="5,0"/>
                                                    <TextBlock Text="{Binding Category}" FontSize="11" Foreground="{StaticResource MediumGray}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <!-- Validation Message -->
                        <Border Background="#fef3c7" BorderBrush="#f59e0b" BorderThickness="2" 
                               CornerRadius="6" Padding="10" Margin="0,0,0,15"
                               Visibility="{Binding SelectedTestTypesCount, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter='LessThan2'}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚠️" FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock Text="يجب اختيار نوعين على الأقل من التحاليل لإنشاء المجموعة" 
                                         FontSize="12" Foreground="#92400e"/>
                            </StackPanel>
                        </Border>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <!-- Create Mode Buttons -->
                            <Button Content="✅ إنشاء المجموعة" 
                                   Style="{StaticResource SecondaryButton}"
                                   Command="{Binding CreateGroupCommand}"
                                   Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Padding="20,10"/>
                            
                            <!-- Edit Mode Buttons -->
                            <Button Content="💾 حفظ التغييرات" 
                                   Style="{StaticResource SecondaryButton}"
                                   Command="{Binding SaveGroupCommand}"
                                   Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}"
                                   Padding="20,10"/>
                            
                            <Button Content="❌ إلغاء" 
                                   Style="{StaticResource DangerButton}"
                                   Command="{Binding CancelEditCommand}"
                                   Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}"
                                   Padding="15,10"/>
                            
                            <!-- Clear Form Button -->
                            <Button Content="🗑️ مسح النموذج" 
                                   Style="{StaticResource PrimaryButton}"
                                   Command="{Binding ClearFormCommand}"
                                   Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Padding="15,10"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource CardBackground}" Padding="15" BorderBrush="#e2e8f0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="💡 تلميح: " FontWeight="Bold" Foreground="{StaticResource AccentOrange}"/>
                    <TextBlock Text="يمكن إضافة نفس التحليل لأكثر من مجموعة، ولكن يجب أن تحتوي كل مجموعة على نوعين أو أكثر من التحاليل" 
                             FontSize="12" Foreground="{StaticResource MediumGray}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" 
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" Width="100" Height="4" 
                               Background="Transparent" Foreground="{StaticResource AccentOrange}"/>
                    <TextBlock Text="معالجة..." FontSize="12" Margin="10,0,0,0" 
                             Foreground="{StaticResource MediumGray}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
