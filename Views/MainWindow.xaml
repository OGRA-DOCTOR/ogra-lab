<Window x:Class="OGRALAB.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OGRA LAB - نظام إدارة المختبر الطبي" 
        Height="800" Width="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft"
        FontFamily="Segoe UI">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="{StaticResource PrimaryColor}" Foreground="White">
            <MenuItem Header="ملف" FontSize="14">
                <MenuItem Header="خروج" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="المرضى" FontSize="14">
                <MenuItem Header="إضافة مريض جديد"/>
                <MenuItem Header="البحث عن مريض"/>
                <MenuItem Header="قائمة المرضى"/>
            </MenuItem>
            <MenuItem Header="التحاليل" FontSize="14">
                <MenuItem Header="طلب تحليل جديد"/>
                <MenuItem Header="إدخال النتائج"/>
                <MenuItem Header="طباعة النتائج"/>
                <MenuItem Header="إدارة أنواع التحاليل"/>
            </MenuItem>
            <MenuItem Header="التقارير" FontSize="14">
                <MenuItem Header="تقرير يومي"/>
                <MenuItem Header="تقرير شهري"/>
                <MenuItem Header="تقرير المرضى"/>
                <MenuItem Header="تقرير الإيرادات"/>
            </MenuItem>
            <MenuItem Header="الإعدادات" FontSize="14">
                <MenuItem Header="إدارة المستخدمين"/>
                <MenuItem Header="إعدادات النظام"/>
                <MenuItem Header="النسخ الاحتياطي"/>
            </MenuItem>
            <MenuItem Header="مساعدة" FontSize="14">
                <MenuItem Header="حول البرنامج"/>
                <MenuItem Header="دليل الاستخدام"/>
            </MenuItem>
        </Menu>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Side Panel -->
            <Border Grid.Column="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                <StackPanel Margin="10">
                    <TextBlock Text="القائمة الرئيسية" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <Button Content="إضافة مريض جديد" Margin="0,5" Padding="10" Background="{StaticResource SecondaryColor}" Foreground="White"/>
                    <Button Content="البحث عن مريض" Margin="0,5" Padding="10"/>
                    <Button Content="طلب تحليل جديد" Margin="0,5" Padding="10"/>
                    <Button Content="إدخال النتائج" Margin="0,5" Padding="10"/>
                    <Button Content="طباعة النتائج" Margin="0,5" Padding="10"/>
                    
                    <Separator Margin="0,15"/>
                    
                    <TextBlock Text="الإحصائيات اليومية" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="عدد المرضى اليوم: " FontWeight="Bold"/>
                        <TextBlock Text="0" Name="TodayPatientsCount"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="التحاليل المنجزة: " FontWeight="Bold"/>
                        <TextBlock Text="0" Name="CompletedTestsCount"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="التحاليل المعلقة: " FontWeight="Bold"/>
                        <TextBlock Text="0" Name="PendingTestsCount"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Main Content -->
            <Grid Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Welcome Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="مرحباً بك في نظام OGRA LAB" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="نظام شامل لإدارة المختبرات الطبية" FontSize="16" Foreground="Gray"/>
                    <TextBlock Name="CurrentUserLabel" Text="المستخدم الحالي: مدير النظام" FontSize="14" Margin="0,10,0,0"/>
                    <TextBlock Name="CurrentDateLabel" FontSize="14" Foreground="Gray"/>
                </StackPanel>
                
                <!-- Dashboard Content -->
                <TabControl Grid.Row="1" Name="MainTabControl">
                    <TabItem Header="لوحة التحكم">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Quick Stats -->
                            <Grid Grid.Row="0" Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Grid.Column="0" Background="{StaticResource InfoColor}" Margin="5" Padding="15" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="إجمالي المرضى" Foreground="White" FontWeight="Bold"/>
                                        <TextBlock Text="0" Name="TotalPatientsLabel" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Grid.Column="1" Background="{StaticResource SecondaryColor}" Margin="5" Padding="15" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="التحاليل النشطة" Foreground="White" FontWeight="Bold"/>
                                        <TextBlock Text="0" Name="ActiveTestsLabel" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Grid.Column="2" Background="{StaticResource WarningColor}" Margin="5" Padding="15" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="في الانتظار" Foreground="White" FontWeight="Bold"/>
                                        <TextBlock Text="0" Name="PendingTestsLabel" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Grid.Column="3" Background="{StaticResource PrimaryColor}" Margin="5" Padding="15" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="مكتملة اليوم" Foreground="White" FontWeight="Bold"/>
                                        <TextBlock Text="0" Name="CompletedTodayLabel" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                            
                            <!-- Recent Activities -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <GroupBox Grid.Column="0" Header="آخر المرضى المضافين" Margin="0,0,10,0">
                                    <DataGrid Name="RecentPatientsGrid" Height="200">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="اسم المريض" Binding="{Binding FullName}" Width="*"/>
                                            <DataGridTextColumn Header="رقم المريض" Binding="{Binding PatientNumber}" Width="100"/>
                                            <DataGridTextColumn Header="تاريخ الإضافة" Binding="{Binding CreatedDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </GroupBox>
                                
                                <GroupBox Grid.Column="1" Header="التحاليل الأخيرة" Margin="10,0,0,0">
                                    <DataGrid Name="RecentTestsGrid" Height="200">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="المريض" Binding="{Binding Patient.FullName}" Width="*"/>
                                            <DataGridTextColumn Header="نوع التحليل" Binding="{Binding TestType.TestName}" Width="*"/>
                                            <DataGridTextColumn Header="الحالة" Binding="{Binding Status}" Width="80"/>
                                            <DataGridTextColumn Header="التاريخ" Binding="{Binding OrderDate, StringFormat=dd/MM/yyyy}" Width="80"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </GroupBox>
                            </Grid>
                        </Grid>
                    </TabItem>
                    
                    <TabItem Header="البحث السريع">
                        <StackPanel Margin="20">
                            <TextBlock Text="البحث السريع عن المرضى" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Name="QuickSearchTextBox" FontSize="16" Padding="10" 
                                       Watermark="ادخل اسم المريض أو رقم الهوية أو رقم المريض"/>
                                <Button Grid.Column="1" Content="بحث" Padding="15,10" FontSize="16" 
                                      Background="{StaticResource PrimaryColor}" Foreground="White"/>
                            </Grid>
                            <DataGrid Name="QuickSearchResultsGrid" Margin="0,20,0,0" Height="300">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="اسم المريض" Binding="{Binding FullName}" Width="*"/>
                                    <DataGridTextColumn Header="رقم المريض" Binding="{Binding PatientNumber}" Width="120"/>
                                    <DataGridTextColumn Header="رقم الهوية" Binding="{Binding NationalId}" Width="120"/>
                                    <DataGridTextColumn Header="العمر" Binding="{Binding Age}" Width="60"/>
                                    <DataGridTextColumn Header="رقم الهاتف" Binding="{Binding PhoneNumber}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#F0F0F0">
            <StatusBarItem>
                <TextBlock Name="StatusLabel" Text="جاهز"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Name="DatabaseStatusLabel" Text="متصل بقاعدة البيانات"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Name="TimeLabel"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
