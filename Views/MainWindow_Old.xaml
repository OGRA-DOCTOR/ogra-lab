<Window x:Class="OGRALAB.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:OGRALAB.Helpers"
        Title="OGRA LAB - نظام إدارة المختبر الطبي" 
        Height="800" Width="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft"
        FontFamily="Cairo, Segoe UI">
    
    <Window.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="PrimaryDark" Color="#1e3a8a"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#f59e0b"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10b981"/>
        <SolidColorBrush x:Key="LightGray" Color="#f8fafc"/>
        <SolidColorBrush x:Key="MediumGray" Color="#64748b"/>
        <SolidColorBrush x:Key="DarkText" Color="#1e293b"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>

        <!-- Navigation Button Style -->
        <Style x:Key="NavigationButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="ButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Margin="5,0">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource AccentOrange}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#d97706"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Navigation Button Style -->
        <Style x:Key="ActiveNavigationButton" TargetType="Button" BasedOn="{StaticResource NavigationButton}">
            <Setter Property="Background" Value="{StaticResource AccentGreen}"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Header Button Style -->
        <Style x:Key="HeaderButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentOrange}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#d97706"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#b45309"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Logout Button Style -->
        <Style x:Key="LogoutButton" TargetType="Button" BasedOn="{StaticResource HeaderButton}">
            <Setter Property="Background" Value="#dc2626"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#b91c1c"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#991b1b"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Background="{StaticResource LightGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Bar -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryDark}" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Ellipse Width="35" Height="35" Fill="{StaticResource AccentOrange}" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="OGRA LAB" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="نظام إدارة المختبر الطبي" FontSize="11" Foreground="#cbd5e1"/>
                    </StackPanel>
                </StackPanel>

                <!-- User Info -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border Background="{StaticResource AccentGreen}" CornerRadius="4" Padding="12,6" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👤" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding CurrentUserDisplayName}" FontWeight="SemiBold" Foreground="White"/>
                            <TextBlock Text=" (" FontSize="12" Foreground="#d1fae5" Margin="5,0,0,0"/>
                            <TextBlock Text="{Binding CurrentUserRole}" FontSize="12" Foreground="#d1fae5"/>
                            <TextBlock Text=")" FontSize="12" Foreground="#d1fae5"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Clock -->
                    <Border Background="{StaticResource AccentOrange}" CornerRadius="4" Padding="12,6">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🕐" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Name="ClockLabel" FontWeight="SemiBold" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Header Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="👥 إدارة المستخدمين" 
                           Style="{StaticResource HeaderButton}"
                           Command="{Binding ManageUsersCommand}"
                           Visibility="{Binding CanViewUserManagement, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    
                    <Button Content="📊 سجل الدخول" 
                           Style="{StaticResource HeaderButton}"
                           Command="{Binding ShowLoginLogsCommand}"
                           Visibility="{Binding CanViewLoginLogs, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Logout Button -->
                <Button Grid.Column="3" 
                       Content="🚪 تسجيل الخروج" 
                       Style="{StaticResource LogoutButton}"
                       Command="{Binding LogoutCommand}"/>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Navigation Side Panel -->
            <Border Grid.Column="0" Background="{StaticResource PrimaryDark}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        
                        <!-- Navigation Title -->
                        <TextBlock Text="القائمة الرئيسية" 
                                 FontSize="18" FontWeight="Bold" 
                                 Foreground="White" 
                                 Margin="10,15,0,20"/>
                        
                        <!-- Patient Management Section -->
                        <TextBlock Text="إدارة المرضى" 
                                 FontSize="14" FontWeight="SemiBold" 
                                 Foreground="{StaticResource AccentOrange}" 
                                 Margin="10,0,0,8"/>
                        
                        <Button Content="📋 إدارة المرضى" 
                               Style="{StaticResource NavigationButton}"
                               Command="{Binding NavigateCommand}"
                               CommandParameter="PatientManagement"
                               Visibility="{Binding CanAddPatients, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        
                        <Button Content="🔍 بحث وتعديل" 
                               Style="{StaticResource NavigationButton}"
                               Command="{Binding NavigateCommand}"
                               CommandParameter="SearchEdit"/>
                        
                        <!-- Test Management Section -->
                        <TextBlock Text="إدارة التحاليل" 
                                 FontSize="14" FontWeight="SemiBold" 
                                 Foreground="{StaticResource AccentOrange}" 
                                 Margin="10,20,0,8"/>
                        
                        <Button Content="🧪 إدخال النتائج" 
                               Style="{StaticResource NavigationButton}"
                               Command="{Binding NavigateCommand}"
                               CommandParameter="ResultEntry"
                               Visibility="{Binding CanManageTests, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        
                        <Button Content="📊 معاينة وطباعة النتائج" 
                               Style="{StaticResource NavigationButton}"
                               Command="{Binding NavigateCommand}"
                               CommandParameter="ReportView"
                               Visibility="{Binding CanManageTests, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        
                        <!-- System Management Section -->
                        <TextBlock Text="إدارة النظام" 
                                 FontSize="14" FontWeight="SemiBold" 
                                 Foreground="{StaticResource AccentOrange}" 
                                 Margin="10,20,0,8"
                                 Visibility="{Binding CanViewUserManagement, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        
                        <Button Content="⚙️ الإعدادات" 
                               Style="{StaticResource NavigationButton}"
                               Command="{Binding NavigateCommand}"
                               CommandParameter="Settings"
                               Visibility="{Binding CanViewReports, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        
                        <!-- Statistics Section -->
                        <Border Background="#2563eb" 
                              CornerRadius="8" 
                              Padding="15" 
                              Margin="5,30,5,0">
                            <StackPanel>
                                <TextBlock Text="الإحصائيات اليومية" 
                                         FontSize="14" FontWeight="Bold" 
                                         Foreground="White" 
                                         Margin="0,0,0,12"/>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="إجمالي المرضى:" Foreground="#bfdbfe" FontSize="12"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TotalPatientsCount}" Foreground="White" FontWeight="Bold" FontSize="12"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="التحاليل النشطة:" Foreground="#bfdbfe" FontSize="12" Margin="0,4,0,0"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ActiveTestsCount}" Foreground="White" FontWeight="Bold" FontSize="12" Margin="0,4,0,0"/>
                                    
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="التحاليل المعلقة:" Foreground="#bfdbfe" FontSize="12" Margin="0,4,0,0"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding PendingTestsCount}" Foreground="White" FontWeight="Bold" FontSize="12" Margin="0,4,0,0"/>
                                    
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="مكتملة اليوم:" Foreground="#bfdbfe" FontSize="12" Margin="0,4,0,0"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CompletedTodayCount}" Foreground="White" FontWeight="Bold" FontSize="12" Margin="0,4,0,0"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Main Content -->
            <Grid Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Welcome Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="مرحباً بك في نظام OGRA LAB" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="نظام شامل لإدارة المختبرات الطبية" FontSize="16" Foreground="Gray"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="المستخدم الحالي: " FontSize="14" Foreground="Gray"/>
                        <TextBlock Text="{Binding CurrentUserDisplayName}" FontSize="14" FontWeight="Bold"/>
                        <TextBlock Text=" (" FontSize="14" Foreground="Gray"/>
                        <TextBlock Text="{Binding CurrentUserRole}" FontSize="14" Foreground="Gray"/>
                        <TextBlock Text=")" FontSize="14" Foreground="Gray"/>
                    </StackPanel>
                    <TextBlock Name="CurrentDateLabel" FontSize="14" Foreground="Gray"/>
                </StackPanel>
                
                <!-- Dashboard Content -->
                <TabControl Grid.Row="1" Name="MainTabControl">
                    <TabItem Header="لوحة التحكم">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Quick Stats -->
                            <Grid Grid.Row="0" Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Grid.Column="0" Background="{StaticResource InfoColor}" Margin="5" Padding="15" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="إجمالي المرضى" Foreground="White" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding TotalPatientsCount}" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Grid.Column="1" Background="{StaticResource SecondaryColor}" Margin="5" Padding="15" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="التحاليل النشطة" Foreground="White" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding ActiveTestsCount}" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Grid.Column="2" Background="{StaticResource WarningColor}" Margin="5" Padding="15" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="في الانتظار" Foreground="White" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding PendingTestsCount}" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Grid.Column="3" Background="{StaticResource PrimaryColor}" Margin="5" Padding="15" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="مكتملة اليوم" Foreground="White" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding CompletedTodayCount}" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                            
                            <!-- Recent Activities -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <GroupBox Grid.Column="0" Header="آخر المرضى المضافين" Margin="0,0,10,0">
                                    <DataGrid Name="RecentPatientsGrid" Height="200">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="اسم المريض" Binding="{Binding FullName}" Width="*"/>
                                            <DataGridTextColumn Header="رقم المريض" Binding="{Binding PatientNumber}" Width="100"/>
                                            <DataGridTextColumn Header="تاريخ الإضافة" Binding="{Binding CreatedDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </GroupBox>
                                
                                <GroupBox Grid.Column="1" Header="التحاليل الأخيرة" Margin="10,0,0,0">
                                    <DataGrid Name="RecentTestsGrid" Height="200">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="المريض" Binding="{Binding Patient.FullName}" Width="*"/>
                                            <DataGridTextColumn Header="نوع التحليل" Binding="{Binding TestType.TestName}" Width="*"/>
                                            <DataGridTextColumn Header="الحالة" Binding="{Binding Status}" Width="80"/>
                                            <DataGridTextColumn Header="التاريخ" Binding="{Binding OrderDate, StringFormat=dd/MM/yyyy}" Width="80"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </GroupBox>
                            </Grid>
                        </Grid>
                    </TabItem>
                    
                    <TabItem Header="البحث السريع">
                        <StackPanel Margin="20">
                            <TextBlock Text="البحث السريع عن المرضى" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Name="QuickSearchTextBox" FontSize="16" Padding="10" 
                                       Watermark="ادخل اسم المريض أو رقم الهوية أو رقم المريض"/>
                                <Button Grid.Column="1" Content="بحث" Padding="15,10" FontSize="16" 
                                      Background="{StaticResource PrimaryColor}" Foreground="White"/>
                            </Grid>
                            <DataGrid Name="QuickSearchResultsGrid" Margin="0,20,0,0" Height="300">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="اسم المريض" Binding="{Binding FullName}" Width="*"/>
                                    <DataGridTextColumn Header="رقم المريض" Binding="{Binding PatientNumber}" Width="120"/>
                                    <DataGridTextColumn Header="رقم الهوية" Binding="{Binding NationalId}" Width="120"/>
                                    <DataGridTextColumn Header="العمر" Binding="{Binding Age}" Width="60"/>
                                    <DataGridTextColumn Header="رقم الهاتف" Binding="{Binding PhoneNumber}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#F0F0F0">
            <StatusBarItem>
                <TextBlock Name="StatusLabel" Text="جاهز"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Name="DatabaseStatusLabel" Text="متصل بقاعدة البيانات"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Name="TimeLabel"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
